<div class="container">
	<div class="row">
		<section class="hgroup">
		  <h2 id='title'>Editar Local</h2>
		  <h2 class="section_header">Modifica la informaci√≥n del local seleccionado.</h2>
		  <div class="line-breadcrumb">
		    <ul class="breadcrumb pull-right">
		        <li><%= link_to "Resumen", dashboard_path %> </li>
		        <li><%= link_to "Locales", locations_path %> </li>
		        <li class="active">Editar</li>
		    </ul>
		  </div>
		</section>
	</div>
</div>

<%= content_tag "div", id: "id_data", data: { id: @location.id } do %>
<% end %>
<%= content_tag "div", id: "geo_data", data: { country_id: @location.district.city.region.country.id, region_id: @location.district.city.region.id, city_id: @location.district.city.id, district_id: @location.district.id,  } do %>
<% end %>
<%= content_tag "div", id: "location_times_data", data: { location_times: @location.location_times.order(:day_id, :open).to_json } do %>
<% end %>
<%= content_tag "div", id: "location_districts_data", data: { location_districts: @location.districts.to_json } do %>
<% end %>

<%= render 'form' %>

<% content_for :scripts do %>
	<%= javascript_include_tag 'validations/validate' %>
	<%= javascript_include_tag 'validations/admin/local' %>
<% end %>