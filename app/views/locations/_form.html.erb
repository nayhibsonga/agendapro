<%= simple_form_for(@location) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> no permitió que el local sea creado:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name, :label => "Nombre" %><br />
  <%= f.input :address, :label => "Dirección" %><br />
  <%= f.input :phone, :label => "Teléfono" %><br />
  <%= f.association :district, :label => "Comuna" %><br />
  <%= f.input :latitude, :as => :hidden %><br />
  <%= f.input :longitude, :as => :hidden %><br />

  <%= f.simple_fields_for :location_times do |location_time| %>
    <%= render 'location_time_fields', :f => location_time %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% content_for :scripts do %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
  <%= javascript_include_tag "admin/geocoder.js" %>
<% end %>