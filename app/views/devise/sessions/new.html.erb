<%= simple_form_for(:user, :url => user_session_path, :html => { class: 'form-horizontal' }) do |f| %>
    <div class="form-group">
        <%= f.label :email, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.input :email, :label => false, :requiered => false, :autofocus => true %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :password, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.input :password, :label => false, :requiered => false, :autofocus => true %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <%= f.input :remember_me, :label => 'Recordarme', :as => :boolean %>
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.button :submit, 'Ingresar', :class => 'btn btn-default' %>
        </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>
