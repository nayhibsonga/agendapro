<div class="container">
  <div class="row">
    <section class="hgroup">
      <h2>¿Olvidaste tu contraseña?</h2>
      <h2 class="section_header">Ingresa tu e-mail para generar una nueva</h2>
      <div class="line-breadcrumb">
        <ul class="breadcrumb pull-right">
            <li><%= link_to "Inicio", root_path %> </li>
            <li class="active">Recuperar Contraseña</li>
        </ul>
    </div>
    </section>
  </div>
</div>

<div class="container">
  <div class="row well">
    <%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' } do |f| %>
      <% if resource.errors.any? %>
      <h3>Errores</h3>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
      <% end %>

      <div class="form-group">
      	<%= f.label :email, 'Email', :class => 'col-sm-2 control-label' %>
      	<div class="col-sm-4">
      		<%= f.email_field :email, :required => true, :autofocus => true, :class => 'form-control' %>
      	</div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit 'Recuperar contraseña', :class => 'btn btn-agendapro-claro' %>
          <%= link_to "Cancelar", root_path, :class => 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row well">
    <p> ¿No quieres seguir con nosotros?
        <%= link_to "Cancelar mi cuenta", registration_path(resource_name), :data => { :confirm => "¿Estás seguro que deseas cancelar tu cuenta?" }, :method => :delete %>
    </p>
  </div>
</div>
