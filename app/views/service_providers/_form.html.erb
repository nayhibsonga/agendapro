<%= simple_form_for(@service_provider) do |f| %>
  <% if @service_provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service_provider.errors.count, "error") %> no permiti√≥ que el local sea creado:</h2>

      <ul>
      <% @service_provider.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
  	<%= f.association :user, :as => :collection_select, collection: User.where(company_id: current_user.company_id), :label => "Usuario", :label_method => :email, value_method: :id %><br />
  	<%= f.association :location, :as => :collection_select, collection: Location.where(company_id: current_user.company_id), :label => "Local", value_method: :id %><br />

  </div>


  <%= f.simple_fields_for :provider_times do |provider_time| %>
    <%= render 'provider_time_fields', :f => provider_time %>
  <% end %>
  <div class="links">
      <%= link_to_add_association 'Agregar Bloque Horario', f, :provider_times %>
    </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
