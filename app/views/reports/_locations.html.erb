<div class="row">
  <div class="col-md-12">
    <div class="panel panel-green">
      <div class="panel-heading">
        <h3 class="panel-title reports-panel-title">Reservas por Local</h3>
      </div>
      <div class="panel-body panel-scrollable">
        <table class="table table-summary">
          <thead>
            <tr>
              <th>Sucursal</th>
              <th>Reservas</th>
              <th>Recaudación</th>
              <th>Ocupación</th>
            </tr>
          </thead>
          <tbody>
            <% Location.where(company_id: current_user.company_id, active: true).order(:name).each do |location| %>
              <tr>
                <td><%= location.name %></td>
                <td><%= location_booking_count(@from, @to, @status_ids, @option, location.id) %></td>
                <td><%= number_to_currency(location_booking_revenue(@from, @to, @status_ids, @option, location.id), currency: ' $', separator: ',', delimeter: '.', precision: 0) %></td>
                <td>
                  <% if @option == 1 %>
                    <%= number_to_percentage(location_booking_occupation(@from, @to, @status_ids, @option, location.id) * 100.0, precision: 2) %>
                  <% else %>
                    No aplica
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td>Total</td>
              <td><%= booking_count(@from, @to, @status_ids, @option, current_user.company_id) %></td>
              <td><%= number_to_currency(booking_revenue(@from, @to, @status_ids, @option, current_user.company_id), currency: ' $', separator: ',', delimeter: '.', precision: 0) %></td>
              <td>
                <% if @option == 1 %>
                  <%= number_to_percentage(booking_occupation(@from, @to, @status_ids, @option, current_user.company_id) * 100.0, precision: 2) %>
                <% else %>
                  No aplica
                <% end %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= line_chart Location.where(company_id: current_user.company_id, active: true).map{|sp| {name: sp.name, data: sp.bookings.group_by_week(:start, range: 2.months.ago.midnight..2.months.from_now).count} }, library: {hAxis: {title: "Semana", format: "MMM d, yy" }, vAxis: {title: "# Reservas", format: "#"}, title: "Cantidad de Reservas Semanales" } %>
  </div>
</div>
