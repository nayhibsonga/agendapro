<div class="row">
	<div class="col-md-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">Reservas de <%= @location.name %> por Servicio</h3>
			</div>
			<div class="panel-body scrollable">
				<table class="table">
					<thead class="head-white">
						<th>Servicio</th>
						<th>Reservas Últimos 7 días</th>
						<th>Reservas Últimos 30 días</th>
					</thead>
					<tbody>
						<% @services.each do |service| %>
						<tr>
							<td>
							<%= service.name %>
							</td>
							<td>
								<%= int_with_variation(service.week_location_bookings(0, @location), service.week_location_bookings(1, @location)) %>
							</td>
							<td>
								<%= int_with_variation(service.month_location_bookings(0, @location), service.month_location_bookings(1, @location)) %>
							</td>
						</tr>
						<% end %>
						<tr>
							<td><strong>Total</strong>
							</td>
							<td><strong>
								<%= int_with_variation(@location.week_bookings(0), @location.week_bookings(1)) %>
							</strong></td>
							<td><strong>
								<%= int_with_variation(@location.month_bookings(0), @location.month_bookings(1)) %>
							</strong></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>