<div class="row">
	<div class="col-md-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">Reservas <%= @location.name %> por Prestador</h3>
			</div>
			<div class="panel-body scrollable">
				<table class="table">
					<thead class="head-white">
						<th>Prestador</th>
						<th>Reservas</th>
						<th>Recaudación</th>
						<th>Ocupación</th>
					</thead>
					<tbody>
						<% @location.service_providers.where(active: true).order(:public_name).each do |provider| %>
						<tr>
							<td>
							<%= provider.public_name %>
							</td>
							<td>
								<%= provider_booking_count(@from, @to, @status_ids, @option, provider.id) %>
							</td>
							<td>
								<%= number_to_currency(provider_booking_revenue(@from, @to, @status_ids, @option, provider.id), currency: ' $', separator: ',', delimeter: '.', precision: 0) %>
							</td>
							<td>
								<%= number_to_percentage(provider_booking_occupation(@from, @to, @status_ids, @option, provider.id), precision: 2) %>
							</td>
						</tr>
						<% end %>
						<tr>
							<td><strong>Total</strong>
							</td>
							<td><strong>
								<%= location_booking_count(@from, @to, @status_ids, @option, @location.id) %>
							</strong></td>
							<td><strong>
								<%= number_to_currency(location_booking_revenue(@from, @to, @status_ids, @option, @location.id), currency: ' $', separator: ',', delimeter: '.', precision: 0) %>
							</strong></td>
							<td><strong>
								<%= number_to_percentage(location_booking_occupation(@from, @to, @status_ids, @option, @location.id), precision: 2) %>
							</strong></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12 graphs">
		<%= line_chart ServiceProvider.where(location: @location, active: true).map{|sp| {name: sp.public_name, data: sp.bookings.group_by_week(:start, range: 2.months.ago.midnight..2.months.from_now).count} }, library: {hAxis: {title: "Semana", format: "MMM d, yy" }, vAxis: {title: "# Reservas", format: "#"}, title: "Cantidad de Reservas Semanales" } %>
	</div>
</div>

<div class="row">
	<div class="col-md-12 graphs">
		<%= line_chart location_booking_by_hour(@from, @to, @status_ids, @option, @location.id), discrete: true, library: {hAxis: {title: "Hora del Día" }, vAxis: {title: "# Reservas", format: "#"}, title: "Reservas por Hora por Día de  "+@location.name } %>
	</div>
</div>