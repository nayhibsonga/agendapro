<div class="row">
	<div class="col-md-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">Reservas <%= @location.name %> por Prestador</h3>
			</div>
			<div class="panel-body scrollable">
				<table class="table">
					<thead class="head-white">
						<th>Prestador</th>
						<th>Reservas Últimos 7 días</th>
						<th>Reservas Últimos 30 días</th>
						<th>Ocupación Últimos 7 días</th>
						<th>Ocupación Últimos 30 días</th>
					</thead>
					<tbody>
						<% @location.service_providers.where(active: true).each do |service_provider| %>
						<tr>
							<td>
							<%= service_provider.public_name %>
							</td>
							<td>
								<%= int_with_variation(service_provider.week_bookings(0), service_provider.week_bookings(1)) %>
							</td>
							<td>
								<%= int_with_variation(service_provider.month_bookings(0), service_provider.month_bookings(1)) %>
							</td>
							<td>
								<%= float_with_variation(service_provider.week_occupation(0), service_provider.week_occupation(1)) %>
							</td>
							<td>
								<%= float_with_variation(service_provider.month_occupation(0), service_provider.month_occupation(1)) %>
							</td>
						</tr>
						<% end %>
						<tr>
							<td><strong>Total</strong>
							</td>
							<td><strong>
								<%= int_with_variation(@location.week_bookings(0), @location.week_bookings(1)) %>
							</strong></td>
							<td><strong>
								<%= int_with_variation(@location.month_bookings(0), @location.month_bookings(1)) %>
							</strong></td>
							<td><strong>
								<%= float_with_variation(@location.week_occupation(0), @location.week_occupation(1)) %>
							</strong></td>
							<td><strong>
								<%= float_with_variation(@location.month_occupation(0), @location.month_occupation(1)) %>
							</strong></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12 graphs">
		<%= line_chart ServiceProvider.where(location: @location, active: true).map{|sp| {name: sp.public_name, data: sp.bookings.group_by_week(:start, range: 2.months.ago.midnight..2.months.from_now).count} }, id: "bookings-chart", library: {hAxis: {title: "Semana", format: "MMM d, yy" }, vAxis: {title: "# Reservas", format: "#"}, title: "Cantidad de Reservas Semanales" } %>
	</div>
</div>

