<h1>Usuarios registrados en tu compañía</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>Tipo</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td><%= link_to '<i class="fa fa-pencil"></i>   Editar'.html_safe, edit_admin_user_path(:id => user.id), :class => "btn btn-warning" %>
          <%= link_to '<i class="fa fa-times"></i>   Eliminar'.html_safe, registration_path(user), method: :delete, data: { confirm: '¿Estás seguro de eliminar al usuario seleccionado?' } unless user.id == current_user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

