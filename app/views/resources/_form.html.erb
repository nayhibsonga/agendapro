<div class="container">
  <div class="row well">
    <%= form_for @resource, :html => {:class => 'form-horizontal'} do |f| %>
      <% if @resource.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@resource.errors.count, "error") %> no permiti√≥ que la empresa sea creada:</h2>

          <ul>
          <% @resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, 'Nombre del Recurso:', :class => 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.text_field :name, :autofocus => true, :required => true, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :quantity, 'Cantidad:', :class => 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.number_field :quantity, :required => true, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, 'Local:', :class => 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.collection_select :location_id, @locations, :id, :name, { selected: current_user.location_id}, {class: "form-control"} %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
          <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
          <%= link_to 'Cancelar', resources_path, class: "btn btn-danger" %>  
        </div>
      </div>
    <% end %>
  </div>
</div>