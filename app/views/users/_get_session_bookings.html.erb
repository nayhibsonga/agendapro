
<div>
	<% i = 1 %>
	<% @sessionBooking.bookings.where(:is_session_booked => true).order('start asc').each do |booking| %>

		<% if DateTime.now < (booking.start.to_datetime - booking.service.company.company_setting.before_edit_booking.hours) && booking.max_changes > 0  %>
			<% if booking.user_session_confirmed %>
				<div class="row session-row" booking_id="<%= booking.id %>">
					<div class="col-md-2 session-row-number">
						Sesi贸n <%= i.to_s %>
					</div>
					<div class="col-md-6 session-row-date">
						<i class="fa fa-calendar-o"></i>&nbsp;<%= I18n.l(booking.start.to_date, format: :day) %>&nbsp;&nbsp;
						<i class="fa fa-clock-o"></i>&nbsp;<%= I18n.l(booking.start.to_time + 4.hours, format: :hour) %>
					</div>
					<div class="col-md-4 session-row-btns">
						<span><a class="btn session-btn session-btn-edit" data-target="#bookModal" data-toggle="modal" href="book_session_form?id=<%= booking.id %>"disabled>Editar</a><button class="btn session-btn session-btn-delete"disabled>Cancelar</button></span>
					</div>
				</div>
			<% else %>
				<div class="row session-row" booking_id="<%= booking.id %>">
					<div class="col-md-2 session-row-number">
						Sesi贸n <%= i.to_s %>
					</div>
					<div class="col-md-6 session-row-date">
						<i class="fa fa-calendar-o"></i>&nbsp;<%= I18n.l(booking.start.to_date, format: :day) %>&nbsp;&nbsp;
						<i class="fa fa-clock-o"></i>&nbsp;<%= I18n.l(booking.start.to_time + 4.hours, format: :hour) %>
					</div>
					<div class="col-md-4 session-row-btns">
						<a class="btn session-btn session-btn-detail" data-target="#detailModal" data-toggle="modal" href="session_booking_detail?id=<%= booking.id %>" disabled>Ver detalle</a>
						<button class="btn session-btn session-btn-validate" disabled>Validar</button>
					</div>
				</div>
			<% end %>
		<% else %>
			<div class="row used-session-row" booking_id="<%= booking.id %>">
				<div class="col-md-2 session-row-number">
					Sesi贸n <%= i.to_s %>
				</div>
				<div class="col-md-6 session-row-date">
					<i class="fa fa-calendar-o"></i>&nbsp;<%= I18n.l(booking.start.to_date, format: :day) %>&nbsp;&nbsp;
						<i class="fa fa-clock-o"></i>&nbsp;<%= I18n.l(booking.start.to_time + 4.hours, format: :hour) %>
				</div>
				<div class="col-md-4 session-row-btns">
					<a class="btn session-btn session-btn-detail" data-target="#detailModal" data-toggle="modal" href="session_booking_detail?id=<%= booking.id %>" disabled>Ver detalle</a>
				</div>
			</div>
		<% end %>
		<% i = i+1 %>
	<% end %>
	<% @sessionBooking.bookings.where(:is_session_booked => false).order('created_at asc').each do |booking| %>

		<div class="row session-row" booking_id="<%= booking.id %>">
			<div class="col-md-2 session-row-number">
				Sesi贸n <%= i.to_s %>
			</div>
			<div class="col-md-6 session-row-date">
				
			</div>
			<div class="col-md-4 session-row-btns">
				<a class="btn session-btn session-btn-book" data-target="#bookModal" data-toggle="modal" href="book_session_form?id=<%= booking.id %>" disabled>Reservar</a>
			</div>
		</div>

		<% i = i+1 %>
	<% end %>
</div>

