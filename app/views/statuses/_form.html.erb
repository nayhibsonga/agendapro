<%= simple_form_for(@status) do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> no permitió que el estado sea creado:</h2>

      <ul>
      <% @status.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  Nombre: <%= f.input :name, :label => false %><br />

  
  Descripción: <%= f.input :description, :label => false %><br />

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
