<%= form_for @status, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> no permitiÃ³ que el estado sea creado:</h2>

      <ul>
      <% @status.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'Nombre', :class => 'col-sm-3 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :name, :autofocus => true, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Descripcion', :class => 'col-sm-3 control-label' %>
    <div class="col-sm-4">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="actions col-sm-offset-3 col-sm-4">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class="fa fa-check"></i>   Guardar
    <% end %>
      <%= link_to '   Cancelar',  statuses_path, class: "btn btn-danger fa fa-times" %>    
    </div>
  </div>
<% end %>
