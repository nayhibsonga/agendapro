<%= form_for @survey_question do |f| %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">Arma tu encuesta</h4>
</div>
<div class="modal-body">
  <div class="container-fluid tab-margin">
    <div class="row">

      <div class="form-group has-feedback">
        <%= f.label :survey_attribute_id, "Atributo a medir" %>
        <%= f.select :survey_attribute_id, options_from_collection_for_select(SurveyAttribute.all, :id, :name, f.object.survey_attribute_id) ,{},{ :class => 'form-control', :placeholder => 'Atributo', :dataQuestion => "attribute"} %>
      </div>
      <div class="form-group has-feedback">
        <%= f.label :question, "Pregunta" %>
        <%= f.text_field :question,{:autofocus => true, :required => true, :class => 'form-control', :placeholder => 'Pregunta', :dataQuestion => "question"} %>
      </div>
      <div class="form-group has-feedback">
        <%= f.label :description, "Descripción" %>
        <%= f.text_area :description,{:autofocus => true, :required => true, :class => 'form-control', :placeholder => 'Descripción', :dataQuestion => "description"} %>
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal" id="cancelModal">Cancelar</button>
  <%= f.submit "Aceptar", :class => "btn btn-default", :id => "acceptModal" %>
</div>
<% end %>

