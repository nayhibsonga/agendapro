<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title" id="editAttributeModalLabel">Editar campo</h4>
</div>
<%= form_for @attribute, :html => {:class => 'form-horizontal attribute_form', :id => 'attribute_form'} do |f| %>
  <div class="modal-body">
    <%= f.hidden_field :company_id, :value => current_user.company.id %>
    <div class="form-group has-feedback">
      <%= f.label :attribute_group_id, 'Categoría', :class => 'control-label col-xs-4' %>
      <div class="col-xs-8">
        <%= f.select :attribute_group_id, options_for_select(@attribute_groups.map{ |c| ["#{c.name}", c.id] }, @attribute.attribute_group_id), {}, { class: 'form-control', required: true } %>
        <span class="help-block"></span>
        <span class="form-control-feedback"></span>
      </div>
    </div>
    <div class="form-group has-feedback">
      <%= f.label :name, 'Nombre', :class => 'control-label col-xs-4' %>
      <div class="col-xs-8">
        <%= f.text_field :name, :class => 'form-control' %>
        <span class="help-block"></span>
        <span class="form-control-feedback"></span>
      </div>
    </div>
    <div class="form-group has-feedback">
      <%= f.label :description, 'Descripción', :class => 'control-label col-xs-4' %>
      <div class="col-xs-8">
        <%= f.text_field :description, :class => 'form-control' %>
        <span class="help-block"></span>
        <span class="form-control-feedback"></span>
      </div>
    </div>
    <!--<div class="form-group has-feedback">
      <%= f.label :order, 'Orden', :class => 'control-label col-xs-4' %>
      <div class="col-xs-8">
        <%= f.number_field :order, :class => 'form-control' %>
        <span class="help-block"></span>
        <span class="form-control-feedback"></span>
      </div>
    </div>-->
    <div class="form-group">
      <div class="col-xs-offset-4 col-xs-8">
        <label for="attribute_mandatory">
          <%= f.check_box :mandatory %> Obligatorio al ingresar/editar cliente
        </label>
      </div>
    </div>
    <% if @attribute.datatype != "file" %>
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-8">
          <label for="attribute_show_on_calendar">
            <%= f.check_box :show_on_calendar %> Pedir en reserva por Calendario
          </label>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-8">
          <label for="attribute_mandatory_on_calendar">
            <%= f.check_box :mandatory_on_calendar %> Obligatorio en reserva por Calendario
          </label>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-8">
          <label for="attribute_show_on_workflow">
            <%= f.check_box :show_on_workflow %> Pedir en reserva en línea
          </label>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-8">
          <label for="attribute_mandatory_on_workflow">
            <%= f.check_box :mandatory_on_workflow %> Obligatorio en reserva en línea
          </label>
        </div>
      </div>
    <% end %>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    <%= f.submit 'Guardar', :class => 'btn btn-green' %>
  </div>
<% end %>