<%= simple_form_for(@attribute) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_id %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :datatype %>
    <%= f.input :mandatory %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
