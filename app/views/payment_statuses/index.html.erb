<h1>Estados de pago</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Estado</th>
      <th>Descripción</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @payment_statuses.each do |payment_status| %>
      <tr>
        <td><%= payment_status.name %></td>
        <td><%= payment_status.description if payment_status.description %></td>
        <td>
          <%= link_to '<i class="fa fa-pencil"></i>   Editar'.html_safe, edit_payment_status_path(payment_status), :class => "btn btn-warning" %>
          <%= link_to '<i class="fa fa-times"></i>   Eliminar'.html_safe, payment_status, :class => "btn btn-danger", method: :delete, data: { confirm: '¿Estás seguro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="fa fa-plus"></i>   Nuevo Estado de Pago'.html_safe, new_payment_status_path, :class => "btn btn-primary" %>
