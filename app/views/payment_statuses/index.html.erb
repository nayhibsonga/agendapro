<h1>Estados de pago</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_statuses.each do |payment_status| %>
      <tr>
        <td><%= link_to payment_status.name, payment_status %></td>
        <td><%= link_to 'Editar', edit_payment_status_path(payment_status) %></td>
        <td><%= link_to 'Eliminar', payment_status, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

