<div class="main">
  <div class="container">
    <div clas="row" id="espacio-workflow">
      <div class="col-md-12">
        <div class="well">
          <h4>Cancelar Reserva</h4>
          <% unless params[:id] %>
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">¿Estás seguro de cancelar tu reserva?</h3>
            </div>
            <div class="panel-body">
              <p>Si cancelas tu reserva, otra persona podrá utilizar la hora liberada</p>
              <%= form_tag("/cancel_booking", method: "post", role: "form", class: "form-horizontal", id: "edit_form" ) do %>
                <input type="hidden" name="id" id="id" value="<%= @booking.id %>">
                <div class="form-group">
                  <div class="col-sm-offset-10 col-sm-2">
                    <button type="submit" class="btn btn-default">Cancelar</button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <% else %>
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Reserva cancelada</h3>
            </div>
            <div class="panel-body">
              <p>Su reserva fue cancelada correctamente</p>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= content_tag "div", id: "booking", data: {booking: @booking} do %>
<% end %>
