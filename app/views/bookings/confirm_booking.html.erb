<div class="main">
	<section class="pricing_wrapper">
		<div class="container">
			<div class="well well-lg">
				<h3>Gracias <%= @booking.client.first_name %></h3>
				<p>
					Tu reserva fue confirmada exitosamente<br />
				</p>
				<hr>
				<div class="row">
					<div class="col-md-6">
						<hr>
						<h4>Resumen de tu Reserva</h4>
						<dl class="dl-horizontal">
							<dt>¿Qué reservaste?</dt>
							<dd><%= @booking.service.name %></dd>
							<dt>¿Dónde?</dt>
							<dd><%= @booking.location.name %></dd>
							<dt>¿Con quién?</dt>
							<dd><%= @booking.service_provider.public_name %></dd>
							<dt>¿Cuándo?</dt>
							<dd><%= l @booking.start %></dd>
							<% if @booking.notes && !@booking.notes.empty? %>
							<dt>Notas</dt>
							<dd><%= @booking.notes %></dd>
							<% end %>
						</dl>
						<hr>
						<h4>Tus Datos</h4>
						<dl class="dl-horizontal">
							<dt>Nombre</dt>
							<dd><%= @booking.client.first_name %> <%= @booking.client.last_name %></dd>
							<% if !@booking.client.email.blank? %>
							<dt>E-mail</dt>
							<dd><%= @booking.client.email %></dd>
							<% end %>
							<% if !@booking.client.phone.blank? %>
							<dt>Teléfono</dt>
							<dd><%= @booking.client.phone %></dd>
							<% end %>
						</dl>
					</div>
					<div class="col-md-6">
						<%= image_tag("backgrounds/icono_reserva2.png", :class => "center-block", size: "232x253") %>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>