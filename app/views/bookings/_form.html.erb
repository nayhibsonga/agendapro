<%= simple_form_for(@booking) do |f| %>
<div class="row">
  <div class="col-md-4">

    <%= f.input :first_name, :label => "Nombre" %><br />
    <%= f.input :last_name, :label => "Apellido" %><br />
    <%= f.input :email, :label => "Email" %><br />
    <%= f.input :phone, :label => "Teléfono" %><br />
    <%= f.input :notes, :label => "Notas" %><br />
    <%= f.association :service_provider, :as => :collection_select, collection: ServiceProvider.where(company_id: current_user.company_id), :label => "Proveedor Servicio", :label_method => :public_name, value_method: :id %><br />
    <%= f.association :service, :as => :collection_select, collection: Service.where(company_id: current_user.company_id), :label => "Servicio", :label_method => :name, value_method: :id %><br />
    <%= f.association :status, :label => "Estado" %><br />
  </div>
  <div class="col-md-8">
    <%= f.input :start, :label => "Inicio" %><br />
    <%= f.input :end, :label => "Término" %><br />
  </div>
</div>
<div class="row">
  <div class="col-md-12">
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
</div>
<% end %>
