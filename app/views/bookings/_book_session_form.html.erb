        $.ajax({
            type: "post",
            url: "optimizer_data",
            dataType: "json",
            data: {id: booking_id},
            success: function(response)
            {
                $("#session-booking-select").trigger("change");
            },
            error: function(response)
            {

            }
        });
    });*/
</script>