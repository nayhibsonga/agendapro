<div class="main">
    <section class="pricing_wrapper">
        <div class="container">
			<div class="well well-lg">
				<% if @booking.errors.any? %>
				<h3>Tuvimos un error</h3>
				<div class="row">
					<div class="col-md-8">
						<p>
							Lo sentimos, hubo un error agendando el servicio.<br>
							Puedes ver mas detalles del error <a id="errorLink" href="#">acá</a><br>.
							Puedes reintentar agendar nuevamente <a href="<%= root_url(:host => @url) %>">aquí</a>.
						</p>
					</div>
					<div class="col-md-4" id="errorDiv">
						<ol>
      						<% @booking.errors.full_messages.each do |msg| %>
        					<li><%= msg %></li>
      						<% end %>
      					</ol>
					</div>
				</div>
				<% else %>
				<h3>¡Gracias <%= @booking.client.first_name %>!</h3>
				<p>
					El servicio fue agendado correctamente.<br>
					Si deseas agendar nuevamente haz click <a href="<%= root_url(:host => @url) %>">aquí</a>.
				</p>
				<hr>
				<h4>Detalles de la Reserva</h4>
				<dl class="dl-horizontal">
					<dt>Local</dt>
					<dd><%= @booking.location.name %></dd>
					<dt>Servicio</dt>
					<dd><%= @booking.service.name %></dd>
					<dt>Nombre</dt>
					<dd><%= @booking.client.first_name %></dd>
					<dt>Apellido</dt>
					<dd><%= @booking.client.last_name %></dd>
					<dt>Email</dt>
					<dd><%= @booking.client.email %></dd>
					<dt>Teléfono</dt>
					<dd><%= @booking.client.phone %></dd>
					<dt>Fecha</dt>
					<dd><%= l @booking.start %></dd>
					<% if !@booking.notes.empty? %>
					<dt>Notas</dt>
					<dd><%= @booking.notes %></dd>
					<% end %>
				</dl>
				<% end %>
			</div>
        </div>
    </section>
</div>

<% if @booking.errors.any? %>
<% content_for :scripts do %>
<script type="text/javascript">
	$(function() {
		$('#errorDiv').hide();
		$('#errorLink').on('click', function () {
			$('#errorDiv').show();
		});
	});
</script>
<% end %>
<% end %>