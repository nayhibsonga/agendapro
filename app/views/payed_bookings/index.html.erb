<script type="text/javascript">
  var Chartkick = {"language": "es"};
</script>

<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<div class="row">
	<h3> </h3>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">Pagos no transferidos</h3>&nbsp;&nbsp;<a href="#">Descargar&nbsp;<i class="fa fa-file-excel-o"></i></a>
			</div>
			<div class="panel-body scrollable">
				<table class="table">
					<thead class="head-white">
						<tr>
							<th>ID</th>
							<th>Empresa</th>
							<th>Banco</th>
							<th>Cta. Cte.</th>
							<th>Rut</th>
							<th>Email</th>
							<th>Cliente</th>
							<th>Total a pagar</th>
							<th>Orden de compra</th>
							<th>Código de autorización</th>
							<th>Fecha</th>
						</tr>
					</thead>
					<tbody>
						<% @lastBookings.each do |booking| %>
						<tr>
							<td>
								<% if booking.status_id == Status.find_by_name('Cancelado').id %>
								<span class="label label-danger">Cancelado</span>
								<% elsif booking.status_id == Status.find_by_name('Pagado').id %>
								<span class="label label-success">Pagado</span>
								<% elsif booking.status_id == Status.find_by_name('Confirmado').id %>
								<span class="label label-primary">Confirmado</span>
								<% elsif booking.created_at != booking.updated_at %>
								<span class="label label-warning">Modificado</span>
								<% else %>
								<span class="label label-agendapro">Reservado</span>
								<% end %>
							</td>
							<td><%= booking.client.first_name %> <%= booking.client.last_name %></td>
							<td><%= booking.service.name %></td>
							<td><%= booking.service_provider.public_name %></td>
							<td><span class="badge"><%= l booking.start %></span></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>		
	</div>
</div>