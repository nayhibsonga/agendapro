<div class="container">
  <div class="row"> 
    <%= form_for @service, html: {class: "form-horizontal" } do |f| %>
      <% if @service.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@service.errors.count, "error") %> no permitió que el servicio fuera creado:</h3>
          <ul>
          <% @service.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-md-6">
        <div class="col-md-12 well">
          <div class="form-group">
            <%= f.label :name, "Nombre: ", class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :name, :autofocus => true, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :price, "Precio: ", class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <div class="input-group">
                <span class="input-group-addon">$</span>
                <%= f.number_field :price, class: "form-control", :min => 0 %>
                <span class="input-group-addon">Pesos</span>
              </div>
              <div class="checkbox">
                <label>
                  <%= f.check_box :show_price %> Mostrar el precio en tu mini-sitio AgendaPro
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :duration, "Duración: ", class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <div class="input-group">
                <%= f.number_field :duration, class: "form-control", :in => 5...1440, :step => 5 %>
                <span class="input-group-addon">Minutos</span>
              </div>
              <div class="checkbox">
                <label>
                  <%= f.check_box :outcall %> Servicio a domicilio <br /><small id="outcallTip" class="hidden">Si el servicio no pertenece a una sucursal exclusivamente a domicilio, recomendamos ingresar las comunas que se atienden en la descripción.</small>
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, "Descripción: ", class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.text_area :description, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              <div class="checkbox">
                <label>
                  <%= f.check_box :group_service %> Servicio Grupal
                </label>
              </div>
            </div>
          </div>
          <div class="form-group hidden">
            <%= f.label :capacity, "Capacidad: ", class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <div class="input-group">
                <%= f.number_field :capacity, class: "form-control", :min => 2 %>
                <span class="input-group-addon">Personas</span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-4">
              <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
              <%= link_to 'Cancelar', services_path, class: "btn btn-danger" %>  
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="col-md-12 well">
          <% if @service.service_category.nil? then @service.build_service_category end %>
          <%= f.fields_for :service_category do |builder| %>
          <div class="form-group hidden">
            <%= builder.label :name, "Nueva Categoría de Servicio", class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= builder.text_field :name, class: "form-control", :value => '' %>
              <%= builder.hidden_field :company_id, class: "form-control", :value => current_user.company_id %>
            </div>
          </div>
          <% end %> 
          <div class="form-group">
            <%= f.label :service_category_id, "Categoría de Servicio: ", class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.collection_select :service_category_id, ServiceCategory.where(company_id: current_user.company_id), :id, :name, {}, { class: "form-control" }%>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="catCheck" id="categoryCheckboxId" value="0" class="checkbox"> Crear nueva categoría de servicios
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :tag, "Tags de Búsqueda: ", class: "col-sm-4 control-label" %>
            <div class="col-sm-8"> 
              <%= f.collection_check_boxes :tag_ids, Tag.where(economic_sector: Company.find(current_user.company_id).economic_sector), :id, :name, html: {class: "checkbox"} do |b|%>
                <div class="checkbox">
                  <%= b.label %> <%= b.check_box %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="form-group">
          <%= f.label :service_provider_ids, "Proveedores de Servicios: ", class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <div class="panel-group" id="service-provider-accordion">
              <% Location.accessible_by(current_ability).each do |location| %>
              <% @service_providers = ServiceProvider.where(company_id: current_user.company_id, location_id: location.id, :active => true) %>
              <% if @service_providers.length > 0 %>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#service-provider-accordion" href="#location<%= location.id %>"><%= location.name %></a>
                    <input type="checkbox" name="selectLocation" id="selectLocation<%= location.id %>" value="0" class="pull-right">
                  </h4>
                </div>
                <div id="location<%= location.id %>" class="panel-collapse collapse<% if location == Location.accessible_by(current_ability).first%> in<% end %>">
                  <div class="panel-body">
                    <%= f.collection_check_boxes :service_provider_ids, @service_providers, :id, :public_name, {}, {class: "check_boxes"} do |b|%>
                      <div class="checkbox">
                        <%= b.label %> <%= b.check_box %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :scripts do %>
  <%= javascript_include_tag "service" %>
<% end %>
