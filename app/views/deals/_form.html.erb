<%= simple_form_for(@deal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :quantity %>
    <%= f.input :active %>
    <%= f.input :constraint_option %>
    <%= f.input :constraint_quantity %>
    <%= f.association :company_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
