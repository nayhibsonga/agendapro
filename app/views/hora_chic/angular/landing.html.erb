<div class="container-fluid landing" ng-controller="SearchController">
  <div class="container">
    <div class="title">
        <h1>
          BUSCA, ENCUENTRA Y <br>RESERVA <span class="typed">SPA_</span>
        </h1>
    </div>

    <div id="search" class="row">
      <div class="col-md-2">
        <div class="geo-icon"></div>
      </div>
      <div class="col-md-6 col-xs-12 form-container">
        <form class="form-horizontal">
          <div class="form-group">
            <div class="input-group input-group-lg">
              <input class="form-control" id="localization" name="localization" placeholder="{{ lang.search.placeholder.address }}" required="required" type="text" autocomplete="off">
