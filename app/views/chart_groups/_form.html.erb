<%= form_for @chart_group, :html => {:class => 'form-horizontal chart_group_form', :id => 'editChart_group_form'} do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title" id="
    editChartGroupModalLabel">Categoría</h4>
  </div>

  <div class="modal-body">

    <%= f.hidden_field :company_id, :value => current_user.company.id %>
    <div class="form-group has-feedback">
      <%= f.label :name, 'Categoría', :class => 'control-label col-xs-4' %>
      <div class="col-xs-8">
        <%= f.text_field :name, { class: 'form-control', required: true } %>
        <span class="help-block"></span>
        <span class="form-control-feedback"></span>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    <%= f.submit 'Guardar', :class => 'btn btn-green submit-block' %>
  </div>
<% end %>