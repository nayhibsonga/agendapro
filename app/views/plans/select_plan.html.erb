                <div class="form-group">
                  <div class="col-md-9 col-md-offset-3">
                    <%= f.submit 'Guardar', :class => 'btn btn-green', :style => "width: 120px;" %>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
              </div>
            </div>
          <% end %>
        </div>
