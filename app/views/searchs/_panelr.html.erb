<div class="row panel-row" style="float:right;">
	<div>

		<div>
			<div class="box-tabs">
				<!-- Nav tabs -->
				<ul class="nav nav-tabs" id="myTab">
					<li class="active"><a href="#home<%=i%>" data-toggle="tab" class="pin-link">
						<!--<div class="number-pin-green number-pin" tab_id="<%=i%>">
							<span><%= i %></span>
						</div>-->
						<div class="number-pin">
							<i class="fa fa-map-marker fa-3x">
							</i>
							<span class="center-number"><%= i %></span>
						</div>
					</a></li>
					<li class="center-li"><a class="center-link" tab_id="<%=i%>" href="#profile<%=i%>" data-toggle="tab">Descripción</a></li>
					<li class="center-li"><a class="center-link" tab_id="<%=i%>" href="#messages<%=i%>" data-toggle="tab">Horario</a></li>
					<li class="right-li"><%= link_to '<i class="fa fa-calendar-o"></i><br />Reservar'.html_safe, url_for(:subdomain => location.get_web_address, locale: location.get_locale, :local => location.id, :controller => 'companies', :action => 'overview'), :class => "reservar-link", :role => "button" %></li>
				</ul>

				<!-- Tab panes -->
				<div class="tab-content location">
					<div class="tab-pane active" id="home<%=i%>">
						<div class="row">
							<div class="img-local-search col-md-4">
								<% if location.company.logo_url %>
								<%= image_tag location.company.logo_url.to_s, :size => "80x80", :alt => location.company.name %>
								<% else %>
								<%= image_tag 'Iso_Pro_Color.png', :alt => 'AgendaPro', :size => "80x80" %>
								<% end %>
							</div>
							<div class="data-local-search col-md-8">
								<p><%= if !location.outcall then location.address+', '+location.district.name else "A Domicilio" end %>.</p>
								<p>Tel: <%= location.phone %></p>
							</div>
						</div>
					</div>
					<div class="tab-pane" id="profile<%=i%>">
						<div class="row">
							<div class="img-local-search col-md-4">
								<% if location.company.logo_url %>
								<%= image_tag location.company.logo_url.to_s, :size => "80x80", :alt => location.company.name %>
								<% else %>
								<%= image_tag 'Iso_Pro_Color.png', :alt => 'AgendaPro', :size => "80x80" %>
								<% end %>
							</div>
							<div class="data-local-search col-md-8">
								<p>                                                    
									<% if location.company.description.blank? %>
									<p>No hay descripción para esta empresa.</p>
									<% else %>
									<p><%= location.company.description %></p>
									<% end %>
								</p>
							</div>
						</div>
					</div>
					<div class="tab-pane" id="messages<%=i%>">
						<div class="row">
							<div class="img-local-search col-md-4">
								<% if location.company.logo_url %>
								<%= image_tag location.company.logo_url.to_s, :size => "80x80", :alt => location.company.name %>
								<% else %>
								<%= image_tag 'Iso_Pro_Color.png', :alt => 'AgendaPro', :size => "80x80" %>
								<% end %>
							</div>
							<div class="data-local-search col-md-8">
								<table class="table">
									<tbody id="schedule-body<%= location.id %>">
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- FIN CUERPO -->


	</div>
</div>
