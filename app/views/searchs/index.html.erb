<!-- contact -->
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="pull-center text-gray text-uppercase">Contáctanos</h1>
        </div>
        <div class="col-sm-12">
            <iframe src="https://mapsengine.google.com/map/u/0/embed?mid=zxyVW9hDKDEg.kYaUAImoWzTg&amp;hl=es-419&amp;z=17" width="100%" height="350"></iframe>
        </div>
        <div class="col-sm-12">
            <%= form_tag("pcontact", method: "post", id: 'contact' ) do %>
                <%= hidden_field_tag :inputName %>
                <%= hidden_field_tag :inputLastname %>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group has-feedback">
                            <label for="full_name" class="label-contacto">Nombre</label>
                            <input type="text" id="full_name" name="user[full_name]" class="form-control" placeholder="Nombre completo" required>
                            <span class="help-block"></span>
                            <span class="form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <%= label_tag(:inputEmail, 'E-mail', :class => "label-contacto") %>
                            <%= email_field_tag(:inputEmail, nil, :class => "form-control", :placeholder => 'mail@dominio.com', :required => true) %>
                            <span class="help-block"></span>
                            <span class="form-control-feedback"></span>
                        </div>
                        <div class="form-group">
                            <%= label_tag(:inputSubject, "Asunto", :class => "label-contacto") %>
                            <%= text_field_tag(:inputSubject, nil, :class => "form-control", :required => true) %>
                            <span class="help-block"></span>
                            <span class="form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group has-feedback">
                            <%= label_tag(:inputMessage, "Mensaje", :class => "label-contacto") %>
                            <%= text_area_tag(:inputMessage, nil, :class => "form-control", :placeholder => "Escriba sus comentarios por favor.", :required => true, :rows => 6) %>
                            <span class="help-block"></span>
                            <span class="form-control-feedback"></span>
                        </div>
                        <%= submit_tag "Enviar", :class => "btn btn-green form-transparent pull-right" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

<% content_for :scripts do %>
<%= javascript_include_tag 'validations/home/contact' %>
<%= javascript_include_tag 'split-name' %>
<script>
    $(function() {
        split_name('#full_name', '#inputName', '#inputLastname');
    });
</script>
<% end %>
