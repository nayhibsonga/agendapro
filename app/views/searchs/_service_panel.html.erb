<div class="promo-service-box row panel-row" service_id="<%= service.id %>" location_id="<%= location.id %>" style="padding-left: 5px; padding-right: 5px;">
	<div class="col-sm-12">
		<div style="background-color: #f0f0f0 !important;">
			<%= image_tag service.time_promo_photo.thumb.url.to_s, :alt => "Loader", :class => "img-responsive" %>
		</div>
		<div style="padding-left: 7px; padding-top: 7px; padding-bottom: 4px; background-color: #B5B5B5; color: #fff; display: block; width: 100%;">
			<%= image_tag "search/pin_map" + i.to_s + ".png", :alt => "Loader", :size => "18x28" %>&nbsp;&nbsp;
			<span style="padding-top: 4px;"><b><%= service.company.name %></b></span>
		</div>
		<div style="background-color: #f1f1f1 !important; width: 100%; height: 100%; padding: 7px;">
			<div class="col-sm-7" style="color: #636363; font-size: 16px;">
				<%= service.name %> en <%= location.name %>
			</div>
			<div class="col-sm-5" style="text-align: right; border-left: 1px solid #b5b5b5;">
				<span style="color: #b5b5b5; font-size: 14px; padding-top: 10px;"><strike><%= number_to_currency(service.price, unit: "$", delimiter: ".") %></strike></span><br />
				<span style="color: #b5b5b5; font-size: 16px;">Desde</span> <span style="color: #22c488; font-size: 16px;"><%= number_to_currency(service.price*(100-service.get_max_time_discount)/100, unit: "$", delimiter: ".") %></span>
			</div>
			<div style="clear: both;"></div>
		</div>
	</div>
</div>

<a href="show_time_promo?id=<%= service.id %>&location_id=<%= location.id %>" service_id="<%= service.id %>" location_id="<%= location.id %>" class="show-promo-link" hidden>Click</a>


