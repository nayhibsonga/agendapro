<div class="main">
    <section class="call_to_action">
        <div class="container">
			<%= form_tag({action: "search"}, method: "GET", class: "form-horizontal") do %>
				<div class="form-group">
					<%= label_tag(:district, "Descubre, encuentra y reserva servicios en", :class => "col-sm-6 control-label") %>
					<div class="col-sm-4">
						<%= select_tag 'district', options_from_collection_for_select(@districts, 'id', 'name'), :include_blanck => true, :class => 'form-control' %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-11">
						<%= search_field_tag :inputSearch, params[:inputSearch], class: "form-control", placeholder: "Peluqueria, Gimansia, Masaje", :required => "true", :autofocus => "autofocus" %>
					</div>
					<div class="col-sm-1">
						<button type="submit" class="btn btn-default col-sm-12"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			<% end %>
        </div>
    </section>
    <section class="portfolio_teasers_wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div id="map"></div>
                </div>
                <div class="col-md-6">
                    <% i = 1
                     @results['locals'].each do |location| %>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row header">
                                <div class="pin">
                                    <%= image_tag "pin.png", :size => "22x22" %>
                                    <span><%= i %></span>
                                </div>
                                <%= location.name %>
                                <%= link_to 'Reservar', url_for(:host => location.company.web_address + '.' + request.domain + request.port_string, :local => location.id, :controller => 'companies', :action => 'workflow'), :class => "btn btn-info pull-right", :role => "button" %>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        <address>
                                            <%= location.address %>, <%= location.district.name %>.<br>
                                            <abbr title="Telefono">Tel:</abbr> <%= location.phone %>
                                        </address>
                                    </div>
                                    <div class="col-md-2">
                                        <% if !location.company.logo.nil? %>
                                        <%= image_tag location.company.logo, :class => "img-rounded" %>
                                        <% else %>
                                        <%= image_tag "Iso_Pro_Color.png", :class => "img-rounded", :size => "90x90" %>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="panel-group" id="accordion<%= location.id %>">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion<%= location.id %>" href="#collapseOne<%= location.id %>">Resumen</a></h4>
                                            </div>
                                            <div id="collapseOne<%= location.id %>" class="panel-collapse collapse in">
                                                <div class="panel-body">
                                                    <p><%= location.company.description %></p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion<%= location.id %>" href="#collapseTwo<%= location.id %>">Horario</a></h4>
                                            </div>
                                            <div id="collapseTwo<%= location.id %>" class="panel-collapse collapse">
                                                <div class="panel-body">
                                                    <div id="schedule-body<%= location.id %>">
                                                      No hay un local seleccionado
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% i = i + 1
                     end %>
                    <% if @results['locals'].empty? %>
                    <h4>No se encontraron resultados para <strong><%= params[:inputSearch] %></strong>.</h4>
                    <% end %>
                </div>
            </div>
        </div>
    </section>
</div>
<%= content_tag "div", id: "results", data: {results: @results['locals']} do %>
<% end %>