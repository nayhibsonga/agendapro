<div class="main">
	<!-- Barra superior y Buscador -->
	<section class="call_to_action">
		<div class="container">
			<%= render 'form' %>
		</div>
	</section>
	
	<!-- Resultado Buscador -->
	<div class="container">
		<div class="row">
			<div class="well">
				<!-- mapa -->
				<div class="col-md-6">
					<div id="map"></div>
				</div>

				<div class="col-md-6">
					<% i = 1
						@results.each do |location| %>
					<div class="panel panel-info"> 
						<div class="panel-heading">
							<div class="head-local-search row">
								<div class="col-sm-1">
									<div class="number-pin">
										<span><%= i %></span>
									</div>
								</div>
								<div class="col-sm-9">
									<h3 class="panel-title title-local"><%= location.company.name %></h3> 
								</div>
								<div class="col-sm-2">
									<% if location.company.owned %>
									<%= link_to 'Reservar', url_for(:host => location.company.web_address + '.' + @domain, :local => location.id, :controller => 'companies', :action => 'overview'), :class => "btn btn-agendapro-orange pull-right", :role => "button" %>
									<% end %>
								</div>
							</div>
						</div>

						<div class="panel-body">
							<div class="box-tabs">
								<!-- Nav tabs -->
								<ul class="nav nav-tabs" id="myTab">
									<li class="active"><a href="#home<%=i%>" data-toggle="tab"><i class="fa fa-home"></i></a></li>
									<li><a href="#profile<%=i%>" data-toggle="tab">Descripción</a></li>
									<li><a href="#services<%=i%>" data-toggle="tab">Servicios</a></li>
									<li><a href="#messages<%=i%>" data-toggle="tab">Horario</a></li>
								</ul>

								<!-- Tab panes -->
								<div class="tab-content">
									<div class="tab-pane active" id="home<%=i%>">
										<div class="data-local-search">
											<p><%= if !location.outcall then location.address+', '+location.district.name else "A Domicilio" end %>.</p>
											<p>Tel: <%= location.phone %></p>
											<% if !location.company.owned %>
											<p><strong>Nota:</strong> Esta empresa no recibe reservas a través de AgendaPro, para reservar debes contactarlos directamente.</p>
											<% end %>
										</div>
									</div>
									<div class="tab-pane" id="profile<%=i%>">
										<p class="fix-position-search">                                                    
											<% if location.company.description.blank? %>
											<p>No hay descripción para esta empresa.</p>
											<% else %>
											<p><%= location.company.description %></p>
											<% end %>
										</p>
									</div>
									<div class="tab-pane" id="services<%=i%>">
										<br />
										<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
										<% location.company.service_categories.each do |service_category| %>
											<div class="panel panel-default">
											    <div class="panel-heading panel-heading-white" role="tab" id="heading<%= service_category.id %>">
											      <h4 class="panel-title">
											        <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= service_category.id %>" aria-expanded="false" aria-controls="collapse<%= service_category.id %>">
											          <%= service_category.name %>
											        </a>
											      </h4>
											    </div>
											    <div id="collapse<%= service_category.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%= service_category.id %>">
											      <div class="panel-body">
											        <table class="table fix-position-search">
														<tbody>
															<% service_category.services.where(active: true).each do |service| %>
															<p><%= service.name %></p>
															<% end %>
														</tbody>
													</table>
											      </div>
											    </div>
											</div>
										<% end %>
										</div>
									</div>
									<div class="tab-pane" id="messages<%=i%>">
										<table class="table fix-position-search">
											<tbody id="schedule-body<%= location.id %>">
											</tbody>
										</table>
									</div>
								</div>
							</div>
							<div class="img-local-search">
								<% if location.company.logo_url %>
								<%= image_tag location.company.logo_url.to_s, :size => "80x80", :alt => location.company.name %>
								<% else %>
								<%= image_tag 'Iso_Pro_Color.png', :alt => 'AgendaPro', :size => "80x80" %>
								<% end %>
							</div>
						</div>
					</div>
					<% i = i + 1 end %>
					<%= will_paginate @results, renderer: BootstrapPagination::Rails %>

					<% if @results.empty? %>
					<div class="panel panel-info"> 
						<div class="panel-heading">
							<div class="head-local-search row">
								<div class="col-sm-1">
									<div class="number-pin">
										<span></span>
									</div>
								</div>
								<div class="col-sm-9">
									<h3 class="panel-title title-local">Lo sentimos</h3> 
								</div>
							</div>
						</div>

						<div class="panel-body">
							<div class="box-tabs">
								<div class="data-local-search">
									<p>No se encontraron resultados para:</p>
									<p><strong><%= params[:inputSearch] %></strong></p>
								</div>
							</div>
							<div class="img-local-search">
								<%= image_tag 'mobile/sad_ap.png', :alt => 'AgendaPro', :size => "80x80" %>
							</div>
						</div>
					</div>
					<% end %>

				</div>
				<div class="clear"></div>
			</div>
		</div>
	</div>
</div>


<%= content_tag "div", id: "results", data: {results: @results} do %>
<% end %>

<% content_for :scripts do %>
	<%= javascript_include_tag "search/map" %>
<% end %>