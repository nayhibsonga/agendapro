<%= form_for(@company_payment_method) do |f| %>
  <% if @company_payment_method.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(@company_payment_method.errors.count, "error") %> prohibited this payment method from being saved:</h2>
	    <ul>
	      <% @company_payment_method.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

  <div class="form-inputs">
    <div class="form-group has-feedback">
      <%= f.label :name, 'Nombre', :class => 'control-label col-xs-4' %>
      <div class="col-xs-8">
        <%= f.text_field :name, :class => 'form-control', required: true %>
        <span class="help-block"></span>
        <span class="form-control-feedback"></span>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-4 col-xs-8">
        <label>
          <%= f.check_box :active %> Activar medio de pago
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-4 col-xs-8">
        <label>
          <%= f.check_box :number_required %> Exigir c√≥digo al ingresar el pago
        </label>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Guardar', :class => 'btn btn-green' %>
  </div>
<% end %>
