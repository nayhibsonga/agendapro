<h1>Bancos autorizados</h1>

<table class="table table-brdered">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nombre</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.code %></td>
        <td><%= bank.name %></td>
        <td><%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_bank_path(bank), :class => "btn btn-warning" %>
        <%= link_to '<i class="fa fa-trash-o"></i> Eliminar'.html_safe, bank, :class => "btn btn-danger", method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="fa fa-plus"></i> Nuevo Banco'.html_safe, new_bank_path, :class => "btn btn-primary" %>
