<div class="container-fluid background-grey">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-green">Nuevo Billing Info</h2>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <%= form_for @billing_info, url: { action: "super_admin_update" }, :html => {:class => 'form-horizontal tab-margin', :multipart => true} do |f| %>
        <% if @billing_info.errors.any? %>
          <% content_for :scripts do %>
            <% message = '' %>
            <% @billing_info.errors.full_messages.each do |msg| %>
              <%= message += '* ' + msg + '\n' %>
            <% end %>
            <script type="text/javascript">
              swal({
                title: "Error al guardar la información",
                text: "<%= message %>",
                type: "error"
              });
            </script>
          <% end %>
        <% end %>

        <input type="hidden" id="id" name="id" value="<%= @billing_info.id %>" />

        <div class="form-group">
          <%= f.label :name, 'Razón Social', :class => 'col-md-2 control-label' %>
          <div class="col-md-5">
            <%= f.text_field :name, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :rut, 'RUT Empresa', :class => 'col-md-2 control-label' %>
          <div class="col-md-5">
            <%= f.text_field :rut, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :sector, 'Giro', :class => 'col-md-2 control-label' %>
          <div class="col-md-5">
            <%= f.text_field :sector, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :contact, 'Nombre Responsable', :class => 'col-md-2 control-label' %>
          <div class="col-md-5">
            <%= f.text_field :contact, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :address, 'Dirección', :class => 'col-md-2 control-label' %>
          <div class="col-md-5">
            <%= f.text_field :address, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :phone, 'Teléfono', :class => 'col-md-2 control-label' %>
          <div class="col-md-5">
            <%= f.text_field :phone, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, 'E-Mail', :class => 'col-md-2 control-label' %>
          <div class="col-md-5">
            <%= f.text_field :email, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-5 col-md-offset-2">
            <%= f.submit 'Guardar', :class => 'btn btn-green' %>
            <%= link_to 'Cancelar', companies_path, :class => "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
