<h1>Ciudades</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_city_path(city), :class => "btn btn-warning" %>
        <%= link_to '<i class="fa fa-trash-o"></i> Eliminar'.html_safe, city, :class => "btn btn-danger", method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '<i class="fa fa-plus"></i> Nueva Ciudad', new_city_path, :class => "btn btn-primary" %>
