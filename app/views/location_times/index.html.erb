<h1>Horarios de Local</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @location_times.each do |location_time| %>
      <tr>
        <td><%= link_to location_time.location.name+" "+ location_time.day.name, location_time %></td>
        <td><%= link_to 'Editar', edit_location_time_path(location_time) %></td>
        <td><%= link_to 'Eliminar', location_time, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

