<h1>Nuevo Local</h1>

<%= form_for @location, html: {class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :name, "Nombre: ", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, :autofocus => true, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, "Dirección: ", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, "Teléfono: ", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :district, "Comuna: ", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.collection_select :district_id, District.all, :id, :name, {}, { class: "form-control" }%>
    </div>
  </div>

  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>

  <div class="row">
    <label>Lunes:</label><div id="div1"></div>
  </div>
  <div class="row">
    <label>Martes:</label><div id="div2"></div>
  </div>
  <div class="row">
    <label>Miércoles:</label><div id="div3"></div>
  </div>
  <div class="row">
    <label>Jueves:</label><div id="div4"></div>
  </div>
  <div class="row">
    <label>Viernes:</label><div id="div5"></div>
  </div>
  <div class="row">
    <label>Sábado:</label><div id="div6"></div>
  </div>
  <div class="row">
    <label>Domingo:</label><div id="div7"></div>
  </div>
  <br />
<% end %>

<div class="row">
  <%= button_to 'Atrás', locations_path, :method => :get, :class => "btn btn-warning btn-sm" %><%= button_to_function "Guardar Local", "startLocation()", :class => "btn btn-success btn-sm" %>
</div>

<br />
<% content_for :scripts do %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
  <%= javascript_include_tag "quick_location" %>
<% end %>