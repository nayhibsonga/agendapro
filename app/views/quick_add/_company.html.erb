<div id="quick_add_step1" class="content-fill">
  <fieldset id="fieldset_step1">
    <%= form_for @company, html: {multipart: true} do |f| %>
      <div class="container-fluid background-green">
        <div class="row">
          <div class="col-md-12">
            <h2 class="text-center">¿A qué te dedicas?</h2>
            <p class="text-center text-dark-green">Selecciona el o los rubros a los que estás dedicado</p>
            <div class="form-group has-feedback text-center">
              <%= f.collection_check_boxes :economic_sector_ids, EconomicSector.all, :id, :name, {}, {class: "check_boxes"} do |b|%>
                <div class="col-md-3">
                  <div class="checkbox">
                    <label>
                      <%= b.check_box %> <%= b.object.name.html_safe %>
                    </label>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group has-feedback">
              <label class="text-center label-green col-md-12">Agrega tu Logotipo (recomendado)</label>
              <div class="col-md-2 col-md-offset-5">
                <%= f.file_field :logo, :accept => 'image/png,image/gif,image/jpeg', :class => 'form-control' %>
                <span class="help-block"></span>
                <span class="form-control-feedback"></span>
              </div>
            </div>
            <div class="form-group has-feedback">
              <label class="text-center label-green col-md-12">Agrega una Descripción de tu Empresa (recomendado)</label>
              <div class="col-md-6 col-md-offset-3">
                <%= f.text_area :description, class: 'form-control', rows: 10 %>
                <span class="help-block"></span>
                <span class="form-control-feedback"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <div class="col-md-2 col-md-offset-5">
                <a id="update_company_button" class="btn btn-orange btn-lg">Siguiente</a>
                <i class="fa fa-spinner fa-spin hidden"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </fieldset>
</div>

<% content_for :scripts do %>
  <%= javascript_include_tag "admin/quick_add/company" %>
<% end %>
