<style type="text/css">
  .nopadding {
    padding: 0 !important;
  }
  label{
    color:#d2d2d2;
    font-size: 35px;
    margin: 10px 2px;
  }
  input[type = "radio"]{
    display:none;
  }
  .form_survey {
    font-family: 'Roboto Condensed', sans-serif;
  }
  .clasificacion{
    direction: rtl;
    unicode-bidi: bidi-override;
    margin-top: 10px;
    text-align: left;
  }
  label:hover{
    color:#ffd865;
  }
  label:hover ~ label{
    color:#ffd865;
  }
  input[type = "radio"]:checked ~ label{
    color:#ffd865;
  }
  form {
    padding: 20px;
    margin: 25px auto;
  }
  form .img_email {
    width: 30px;
    height: auto;
    display: inline-block;
    margin-right: 5px;
  }
  form .img_logo {
    width: 165px;
    height: auto;
  }
  form p{
    font-size: 16px;
    line-height: 16px;
    margin: 0;
    color: #666;
    font-weight: normal;
  }
  form textarea{
    height: 100px !important;
    resize: none;
  }
  form .header p{
    display: inline-block;
  }
  form .circles span{
    display: inline-block;
    width: 20px;
    height: 20px;
    background-color: #22c488;
    border-radius: 100%;
    margin: 4px;
    float: right;
  }
  form .separator{
    height: 1px;
    background: #d2d2d2;
    margin: 20px 0;
  }
  form ol {
    color: #22c488;
    font-weight: bold;
    padding-left: 35px !important;
    padding-right: 35px !important;
    font-size: 20px;
  }
  form ol li {
    margin-top: 10px;
  }
  form ol li p{
    margin-top: 10px;
    font-size: 14px;
    line-height: 15px;
  }

  form .btn_green {
    background-color: #22c488;
    color: #fff;
    width: 100%;
    max-width: 100px;
    margin-top: 10px;
    display: inline-block;
  }
  form .button_right {
    text-align: right;
  }
  form h1 {
    font-size: 32px;
    color: #000;
    font-weight: bold;
    margin-bottom: 0;
  }
  form h1:after {
    content: "";
    height: 2px;
    width: 30px;
    background: #000;
    margin-top: 10px;
    display: block;
  }
  form h2 {
    font-size: 24px;
    color: #22c488;
    font-weight: normal;
  }
  form h2 > span{
    font-size: 24px;
    color: #22c488;
    font-weight: bold;
  }
  .container_question {
    border: 1px solid #d2d2d2;
    float: left;
    padding-top: 10px;
    padding-bottom: 20px;
  }
  .container_question h2{
    color: #22c488;
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 5px;
    margin-top: 10px;
  }
  .container_question h3{
    color: #22c488;
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 5px;
    margin-top: 10px;
    text-align: center;
    font-weight: normal;
    font-size: 30px;
  }
  .container_question .comment{
    margin-top: 20px;
  }
  .invalid {
    background-color: rgba(214,0,0,1);
    height: 50px;
    font-size: 20px;
    display: block;
    font-weight: bold;
    color: #fff;
    text-align: center;
    margin: 30px auto;
    line-height: 49px;
    box-shadow: 1px 1px 2px #ccc;
  }
</style>
<div class="container-fluid tab-margin form_survey">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 ">
    <% if @found %>
      <%= form_for(@survey_answer) do |f| %>
        <div class="col-md-12 nopadding header">
        <h1>Encuesta de servicio</h1>
        </div>
        <div class="col-md-12 separator"></div>
        <div class="col-md-12">
          <%= image_tag("#{@logo}", class:"col-md-3")%>
          <h2 class="col-md-9">Encuesta de servicio <span><%= @company %></span></h2>
          <p class="col-md-9">Texto para motivar a la gente a que conteste la encuesta.</p>
        </div>
        <div class="col-md-12 separator"></div>
        <% @survey.bookings.each do |s|%>
          <% @book = s %>
          <% if !s.service.service_survey_constructs.nil? && s.service.service_survey_constructs.count > 0 %>
            <ol class="container_question col-md-12">
            <h3>Con respecto a su cita <%= s.service.name %></h3>
              <% s.service.service_survey_constructs.each do |c| %>
                <% c.survey_construct.survey_questions.sort_by(&:question).each do |q| %>
                <%= f.hidden_field :booking, :value => @book.id, :name =>"survey_answer[][booking_id]"  %>
                <%= f.hidden_field :survey_question, :value => q.id, :name =>"survey_answer[][survey_question_id]"  %>
                  <%= fields_for :survey_questions, q do |u| %>
                    <%= render 'questions_fields' , :f => u %>
                  <% end %>
                <% end %>
              <% end %>
            </ol>
          <% end %>
        <% end %>
        <div class="form-actions button_right">
          <%= f.button("Enviar",{:class => 'form-control btn_green'}) %>
        </div>
      <% end %>
    </div>
  </div>
    <% else %>
      <p class="invalid"><%= @error %></p>
    <%end%>
</div>
