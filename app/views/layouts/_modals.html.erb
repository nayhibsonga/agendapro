<!-- start: Modals -->
<div class="modal fade" id="signin-modal" tabindex="-1" role="dialog" aria-labelledby="siginLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Inicia Sesión</h4>
      </div>
      <div class="modal-body">
        <div class="row">
            <%= form_for (:user, :url => user_session_path, :html => { class: 'form-horizontal' }) do |f| %>
                <div class="form-group">
                    <%= label_tag :email, 'Email', :class => 'col-sm-4 control-label' %>
                    <div class="col-sm-8">
                        <%= email_field :email, nil, :requiered => false, :autofocus => true %>
                    </div>
                </div>
                <div class="form-group">
                    <%= label_tag :password, 'Contraseña', :class => 'col-sm-4 control-label' %>
                    <div class="col-sm-8">
                        <%= password_field_tag :password, nil, :requiered => false, :autofocus => true %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <div class="checkbox">
                            <label>
                                <%= check_box_tag :remember_me %>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <%= submit_tag 'Ingresar', :class => 'btn btn-default' %>
                    </div>
                </div>
            <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info">Regístrate</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="sigupLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Regístrate</h4>
      </div>
      <div class="modal-body">
        <div class="row">
            <%= simple_form_for(:user, :url => user_registration_path, :html => { class: 'form-horizontal' }) do |f| %>
                <%= f.input :role_id, :as => :hidden, :label => "false", :input_html => {:value => Role.where(:name => "Usuario Registrado").first.id } %>
                <div class="form-group">
                    <%= f.label :email, :class => 'col-sm-4 control-label' %>
                    <div class="col-sm-8">
                        <%= f.input :email, :label => false, :requiered => false, :autofocus => true %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :password, :class => 'col-sm-4 control-label' %>
                    <div class="col-sm-8">
                        <%= f.input :password, :label => false, :requiered => false, :autofocus => true %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :password_confirmation, :class => 'col-sm-4 control-label' %>
                    <div class="col-sm-8">
                        <%= f.input :password_confirmation, :label => false, :requiered => false, :autofocus => true %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <%= f.button :submit, 'Regístrate', :class => 'btn btn-default' %>
                    </div>
                </div>
            <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info">Inicia Sesión</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- end: Modals -->

<script type="text/javascript">
function changeModal () {
    $('#signin-modal').modal('toggle');
    $('#signup-modal').modal('toggle');
}

$(function () {
    $('#signin-modal .modal-footer button').click(function () {
        changeModal();
    });
    $('#signup-modal .modal-footer button').click(function () {
        changeModal();
    });
});
</script>