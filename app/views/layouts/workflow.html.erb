<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="es"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="es"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="es"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="es"> <!--<![endif]-->

    <head>
        <!-- start: Meta -->
        <meta charset="utf-8">
        <title><%= @company.name %> - AgendaPro</title>
        <meta name="author" content="AgendaPro">
        <meta name="keyword" content="agendapro, agenda, agenda online, reserva, reserva online">
        <%= csrf_meta_tags %>
        <!-- end: Meta -->

        <!-- start: Mobile Specific -->
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!-- end: Mobile Specific -->

        <!-- start: CSS -->
        <%= stylesheet_link_tag "workflow" %>
        <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,600,600italic,700,700italic,300italic" %>
        <!--[if IE 7]>
            <%= stylesheet_link_tag "homeie7" %>
        <![endif]-->
        <!-- end: CSS -->

        <!-- start: JavaScript-->
        <%= javascript_include_tag "home-head" %>
        <!-- end: JavaScript-->

        <!-- Fav and touch icons -->
        <%= favicon_link_tag "Iso_Pro_Color.png", :rel => "shortcut icon" %>
    </head>

    <body>
        <!-- start: Header -->
        <header>
            <div id="barra-superior">
                <div class="container">
                    <div class="row">
                        <div id="logo-barra">
                            <a href="<%= root_url(:host => request.domain + request.port_string) %>" class="navbar-brand">
                                <%= image_tag 'home/logo_agendaproVerde.png', :alt => "AgendaPro", :size => "127x40" %>
                            </a>
                        </div>
                        <div id="sign" class="pull-right">
                            <% if user_signed_in? %>
                            <div class="dropdown">
                                <a href="#" data-toggle="dropdown"><%= current_user.email %> <span class="caret"></span></a>
                                <ul class="dropdown-menu  dropdown-sign" role="menu">
                                    <li><%= link_to 'Dashboard', dashboard_path %></li>
                                    <li><%= link_to "Editar Perfil", edit_user_registration_path %></li>
                                    <li class="divider"></li>
                                    <li><%= link_to 'Salir'.html_safe, destroy_user_session_path, method: :delete %></li>
                                </ul>
                            </div>
                            <% else %>
                            <a href="#" data-toggle="modal" data-target="#signin-modal">Inicia Sesión</a>
                            <a href="#" data-toggle="modal" data-target="#signup-modal">Regístrate</a>
                            <%= link_to 'Crea tu empresa', home_path %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header-empresa">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-4 col-sm-4 col-md-2">
                            <div class="logo-empresa">
                                <% if !@company.logo.nil? %>
                                <%= image_tag @company.logo, :alt => @company.name %>
                                <% else %>
                                <%= image_tag 'Iso_Pro_Color.png', :alt => 'AgendaPro' %>
                                <% end %>
                            </div>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-8" id="datos-empresa">
                            <h3><%= @company.name %></h3>
                            <div class="info-empresa">
                                <%= @company.description %>
                            </div>
                            <a href="http://<%= @url %>" class="btn btn-info">Descripción</a>
                            <a href="#" class="btn btn-info">Servicio</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- start: Alerts -->
            <% if notice %>
                <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <%= notice %>
                </div>
            <% end %>
            <% if alert %>
                <div class="alert alert-warning alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <%= alert %>
                </div>
            <% end %>
            <!-- end: Alerts -->
        </header>
        <!-- end: Header -->

        <!-- start: content -->
        <%= yield %>
        <%= render 'layouts/modals' %>
        <!-- end: content -->

        <!-- start: JavaScript-->
        <%= yield :scripts %>
        <%= javascript_include_tag "workflow" %>
        <!-- end: JavaScript-->
        
        <!------ Originales ------->
        <!-- Los JS -->
        <!--<script src='http://connect.facebook.net/en_US/all.js'></script>-->
    </body>
</html>