<!--[if gt IE 8]><!--> <html class="no-js" lang="es"> <!--<![endif]-->

    <head>
        <!-- start: Meta -->
        <meta charset="utf-8">
        <title><%= @company.name %> - AgendaPro</title>
        <meta name="author" content="AgendaPro">
        <meta name="keyword" content="agendapro, agenda, agenda online, reserva, reserva online">
        <%= csrf_meta_tags %>
        <!-- end: Meta -->

        <!-- start: Mobile Specific -->
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!-- end: Mobile Specific -->

        <!-- start: CSS -->
        <%= stylesheet_link_tag "workflow" %>
        <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,600,600italic,700,700italic,300italic" %>
        <!--[if IE 7]>
            <%= stylesheet_link_tag "homeie7" %>
        <![endif]-->
        <!-- end: CSS -->

        <!-- start: JavaScript-->
        <%= javascript_include_tag "home-head" %>
        <!-- end: JavaScript-->

        <!-- Fav and touch icons -->
        <%= favicon_link_tag "Iso_Pro_Color.png", :rel => "shortcut icon" %>
    </head>

    <body>
        <!-- start: Header -->
        <header>
            <div class="container">
                <div class="navbar navbar-default" role="navigation">
                    <div id="sign">
                        <i class="fa fa-user"></i>
                        <% if user_signed_in? %>
                          <%= link_to current_user.user_name, edit_user_registration_path %> /
                          <%= link_to "Salir".html_safe, destroy_user_session_path, method: :delete %>
                        <% else %>
                          <%= link_to "Inicia SesiÃ³n", new_user_session_path %>
                        <% end %>
                    </div>
                    <div class="navbar-header">
                        <% if !@company.logo.nil? %>
                            <a class="navbar-brand">
                                <%= image_tag @company.logo, :alt => @company.name %>
                            </a>
                        <% end %>
                    </div>
                    <div class="navbar-header aplogo">
                        <a class="navbar-brand" href="<%= root_url(:host => request.domain + request.port_string) %>">
                            <%= image_tag "home/Logo.png", :size => "202x74", :alt => "AgendaPro" %>
                        </a>
                    </div>
                    <h1><%= @company.name %></h1>
                </div>
                <!-- start: Alerts -->
                <% if notice %>
                    <div class="alert alert-info alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <%= notice %>
                    </div>
                <% end %>
                <% if alert %>
                    <div class="alert alert-warning alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <%= alert %>
                    </div>
                <% end %>
                <!-- end: Alerts -->
            </div>
        </header>
        <!-- end: Header -->

        <!-- start: content -->
        <%= yield %>
        <!-- end: content -->

        <!-- start: JavaScript-->
        <%= javascript_include_tag "workflow" %>
        <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
        <!-- end: JavaScript-->
        
        <!------ Originales ------->
        <!-- Los JS -->
        <!--<script src='http://connect.facebook.net/en_US/all.js'></script>-->
    </body>
</html>