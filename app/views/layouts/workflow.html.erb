    <body>
        <%= render 'layouts/modals' %>
        <!-- start: Header -->
        <header>
            <div id="barra-superior">
                <div class="container">
                    <div class="row">
                        <a href="<%= root_without_subdomain %>" id="logo"></a>
                        <a href="#" id="menu-display"><span class="fa fa-align-justify"></span> MENU</a>
                        <ul class="nav nav-pills pull-right">
                            <% if user_signed_in? %>
                                <%= render 'layouts/home_dropdown' %>
                            <li><%= link_to '<i class="fa fa-plus"></i> Info'.html_safe, home_path %></li>
                            <% else %>
                                <li><a href="#" data-toggle="modal" data-target="#signin-modal"><i class="fa fa-user"></i> Inicia Sesión</a></li>
                                <li><a href="#" data-toggle="modal" data-target="#signup-modal"><i class="fa fa-pencil-square-o"></i> Regístrate</a></li>
                                <li><%= link_to '<i class="fa fa-home"></i> Agrega tu empresa'.html_safe, home_path %></li>
                            <% end %>
                        </ul>    
                    </div>
                </div>
            </div>
            <div class="header-empresa">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-3 col-sm-3 col-md-2">
                            <div class="logo-empresa">
                                <% if @company.logo_url %>
                                <%= image_tag @company.logo_url.to_s, :alt => @company.name %>
                                <% else %>
                                <%= image_tag 'Iso_Pro_Color.png', :alt => 'AgendaPro' %>
                                <% end %>
                            </div>
                        </div>
                        <div class="col-xs-9 col-sm-9 col-md-9 margen-workflow" id="datos-empresa">
                            <h3><%= @company.name %></h3>
                            <div class="info-empresa">
                                <%= @company.description %>
                            </div>
                            <a href="http://<%= @url %>" class="btn btn-agendapro-oscuro">Locales</a>
                            <a href="#" class="btn btn-agendapro-oscuro" id="boton-servicio">Servicios</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- start: Alerts -->
            <% if notice %>
                <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <%= notice %>
                </div>
            <% end %>
            <% if alert %>
                <div class="alert alert-warning alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <%= alert %>
                </div>
            <% end %>
            <!-- end: Alerts -->
        </header>
        <!-- end: Header -->

        <!-- start: content -->
        <%= yield %>
        <!-- end: content -->

        <footer>
            <section id="footer_teasers_wrapper">
                <div class="container">
                    <div class="row">
                        <div class="footer_teaser col-sm-12 col-md-12">
                            <%= render 'layouts/facebook' %>
                            <h3>AgendaPro - Sistema de Reservas Online</h3>
                            <p>
                                <span class="txt-footer"><i class="fa fa-map-marker"></i> Nuestra Se&ntilde;ora de los Angeles 185, Oficina D, Las Condes, Santiago </span>
                                <span class="txt-footer"><i class="fa fa-phone"></i> (+56 9) 5178 5898 </span>
                                <span><i class="fa fa-envelope"></i> contacto@agendapro.cl </span>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
            <section class="copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 col-md-6"> &copy; Copyright 2013 | Gunei Investment SpA | Todos los derechos reservados</div>
                        <div class="text-right col-sm-6 col-md-6">
                            <%= link_to 'Sobre Nosotros', '/about_us', :target => :blank %> | <%= link_to 'Términos y Condiciones', '/TyC.pdf', :target => :blank %>
                        </div>
                        <% if mobile_browser? %>
                        <div class="col-xs-12">
                            <%= link_to 'Sitio Movil', prefer_mobile_site_url %>
                        </div>
                        <% end %>
                    </div>
                </div>
            </section>
        </footer>

        <!-- start: JavaScript-->
        <%= yield :scripts %>
        <%= javascript_include_tag "workflow" %>
        <%= javascript_include_tag "jquery.browser.min" %>
        <%= javascript_include_tag "browser-detect" %>

        <script>
          $( "#menu-display" ).click(function() {
            $( ".nav-pills" ).toggle( "slow" );
          });
        </script>
        <!-- end: JavaScript-->
        
        <!------ Originales ------->
        <!-- Los JS -->
        <!--<script src='http://connect.facebook.net/en_US/all.js'></script>-->
    </body>
</html>