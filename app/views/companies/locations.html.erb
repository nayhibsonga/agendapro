
<div class="row companies_header">
	<ul class="nav nav-tabs">

		<li><a id="companies_payments" href="/companies_payments">Estados de pagos</a></li>

		<li><a id="companies_incomes" href="/companies_incomes">Ingresos mensuales</a></li>

		<li class="active"><a id="companies_locations" href="/companies_locations">Clientes y locales</a></li>

		<li><a id="companies_monthly_locations" href="/companies_monthly_locations">Locales mensuales</a></li>

		<li><a id="companies_monthly_bookings" href="/companies_monthly_bookings">Resumen de reservas</a></li>

		<li><%= link_to 'Empresas', companies_path, { :id => "companies" } %></li>

	</ul>
</div>

<div class="row" style="margin-top: 10px; margin-bottom: 10px;">
	<div class="col-md-12">
		<div class="form-group">
			<div class="col-md-2">
				<select id="year-select" name="year" class="form-control">
					<% current = DateTime.now.year.to_i %>
					<% for i in 2014..current do %>
						<% if i == @year %>
							<option value="<%= i %>" selected><%= i.to_s %></option>
						<% else %>
							<option value="<%= i %>"><%= i.to_s %></option>
						<% end %>
					<% end %>
				</select>
			</div>
			<div class="col-md-2">
				<span class="form-control">
					<a id="year-select-link" href="/companies_locations?year=<%= @year %>">Obtener locales</a>
				</span>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="companies_incomes_header">
			<h3>Locales para el a√±o <%= @year %></h3>
		</div>
		<% for i in 1..12 do %>
			<% companies = @companies_arr[i]['companies'] %>

			<% if !companies.nil? && companies.count > 0 %>
				<h4><%= @companies_arr[i]['month'] %></h4>
				<div class="scrollable" style="max-height: 200px;">
					<table class="companies-table">
						<tr class="companies-table-header">
							<th>
								Empresa
							</th>
							<th>
								Plan actual
							</th>
							<th>
								Locales
							</th>
							<th>
								Monto
							</th>
						</tr>
						<% companies.each do |company| %>
							<tr>
								<td>
									<%= link_to company.name, controller: "companies", action: "manage_company", id: company.id %>
								</td>
								<td>
									<%= company.plan.name %>
								</td>
								<td>
									<%= company.locations.count %>
								</td>
								<td>
									$<%= company.plan.price %>
								</td>
							</tr>
						<% end %>
					</table>
				</div>
			<% else %>

			<% end %>

		<% end %>

	</div>
</div>

<% content_for :scripts do %>
	<%= javascript_include_tag "jquery-ui.min" %>

	<script type="text/javascript">
		$("#year-select").on('change', function(){

			var year = $(this).val();
			$("#year-select-link").attr("href", "/companies_locations?year=" + year);

		});

	</script>

<% end %>
