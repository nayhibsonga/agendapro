<div class="main">
  <div class="container">
    <div class="row">
      <div class="well">
        <div class="col-md-3">
          <h3>Selecciona un local</h3>
          <table class="table table-bordered" id="locales-empresa">
            <tbody>
              <% @locations.each do |local| %>
              <tr <%= 'class="local-seleccionado"' if @selectedLocal.to_i == local.id %>>
                <td>
                  <div class="radio">
                    <label>
                      <input type="radio" name="localRadio" id="localOption<%= local.id %>" value="<%= local.id %>" <%= "checked" if @selectedLocal.to_i == local.id %>>
                      <p>
                        <strong><%= local.name %></strong> <br/>
                        <%= local.address %>, <%= local.district.name %>
                      </p>
                    </label>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-md-6">
          <div class="google-maps-empresa">
            <div id="map"></div>
          </div>
        </div>
        <div class="col-md-3">
          <a href="#" class="btn btn-success btn-lg btn-block" id="boton-agendar"><i class="fa fa-calendar"></i> AGENDAR </a>
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Horario</h3>
            </div>
            <div class="panel-body">
              <table class="table">
                <tbody id="schedule-body">
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<%= content_tag "div", id: "workflow_url", data: {url: @url} do %>
<% end %>

<% content_for :scripts do %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
  <%= javascript_include_tag "workflow/overview.js" %>
<% end %>