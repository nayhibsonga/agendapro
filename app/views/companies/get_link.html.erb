<div class="container">
	<div class="row">
		<h2>Obten el link AgendaPro para tu página</h2>
		<div class="col-md-6">
			<div class="row">
				<h3>1.- Elije el formato</h3>
				<div class="col-md-12">
					<div class="radio">
						<label>
							<input type="radio" name="formatRadio" style="float: none;" value="sizeImageRadio">
							<%= image_tag 'logos/logo_mail.png', :alt => 'AgendaPro' %>
						</label>
					</div>
				</div>
				<div class="col-md-12">
					<div class="radio">
						<label>
							<input type="radio" name="formatRadio" style="float: none;" value="sizeButtonRadio">
							<span class="btn btn-agendapro-oscuro">AgendaPro</span>
						</label>
					</div>
				</div>
				<div class="col-md-12">
					<div class="radio">
						<label>
							<input type="radio" name="formatRadio" value="sizeLinkRadio">
							<a>AgendaPro</a>
						</label>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="row">
				<h3>2.- Elije el tamaño</h3>
				<div class="col-md-12">
					<div class="row">
						<div class="col-md-12">
							<div class="radio hidden">
								<label>
									<input type="radio" name="sizeImageRadio" style="float: none;" value="202x74">
									<%= image_tag 'logos/logo_mail.png', :alt => 'AgendaPro', :size => '202x74' %>
								</label>
							</div>
						</div>
						<div class="col-md-12">
							<div class="radio hidden">
								<label>
									<input type="radio" name="sizeImageRadio" style="float: none;" value="101x37">
									<%= image_tag 'logos/logo_mail.png', :alt => 'AgendaPro', :size => '101x37' %>
								</label>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-12">
					<div class="row">
						<div class="col-md-12">
							<div class="radio hidden">
								<label>
									<input type="radio" name="sizeButtonRadio" style="float: none;" value="btn-lg">
									<span class="btn btn-agendapro-oscuro btn-lg">AgendaPro</span>
								</label>
							</div>
						</div>
						<div class="col-md-12">
							<div class="radio hidden">
								<label>
									<input type="radio" name="sizeButtonRadio" style="float: none;" value="">
									<span class="btn btn-agendapro-oscuro">AgendaPro</span>
								</label>
							</div>
						</div>
						<div class="col-md-12">
							<div class="radio hidden">
								<label>
									<input type="radio" name="sizeButtonRadio" style="float: none;" value="btn-sm">
									<span class="btn btn-agendapro-oscuro btn-sm">AgendaPro</span>
								</label>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-12">
					<div class="row">
						<div class="col-md-12">
							<div class="radio hidden">
								<label>
									<input type="radio" name="sizeLinkRadio" value="">
									<a>AgendaPro</a>
								</label>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<h3>Copia tu codigo</h3>
			<pre class="pre-scrollable"></pre>
		</div>
	</div>
</div>

<% content_for :scripts do %>
<script type="text/javascript">
	var web_address = '<%= @web_address %>';
</script>
<%= javascript_include_tag "admin/link_agendapro" %>
<% end %>