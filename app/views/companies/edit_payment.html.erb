<div class="container">
	<div class="row">
		<section class="hgroup">
			<h2>Edición de Compañía</h2>
			<div class="line-breadcrumb">
				<ul class="breadcrumb pull-right">
						<li><%= link_to "Resumen", companies_path %> </li>
						<li class="active">Empresa</li>
				</ul>
			</div>
		</section>
	</div>
</div>

<div class="container">
	<div class="row well">
		<%= form_for @company, :html => {:class => 'form-horizontal', :multipart => true} do |f| %>
			<% if @company.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@company.errors.count, "error") %> no permitió que la empresa sea creada:</h2>

					<ul>
					<% @company.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
					</ul>
				</div>
			<% end %>

			<div class="form-group">
				<%= f.label :months_active_left, 'Meses Restantes', :class => 'col-sm-4 control-label' %>
				<div class="col-sm-8">
					<%= f.number_field :months_active_left, :class => 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :due_amount, 'Deuda', :class => 'col-sm-4 control-label' %>
				<div class="col-sm-8">
					<%= f.number_field :due_amount, :class => 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :due_date, 'Fecha Deuda', :class => 'col-sm-4 control-label' %>
				<div class="col-sm-8">
					<%= f.date_field :due_date, :class => 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :plan_id, "Plan", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.collection_select :plan_id, Plan.all.order(:name), :id, :name, {}, {class: "form-control"} %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :payment_status_id, "Estado Pago", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.collection_select :payment_status_id, PaymentStatus.all.order(:name), :id, :name, {}, {class: "form-control"} %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :active, "Activo", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.check_box :active %>
				</div>
			</div>


			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
				 <%= f.submit 'Guardar', :class => 'btn btn-agendapro-claro' %>
				 <%= link_to 'Agregar Mes', add_month_path(@company), :class => "btn btn-agendapro-oscuro" %>
				 <%= link_to 'Cancelar', dashboard_path, :class => "btn btn-default" %>
				</div> 
			</div>
		<% end %>
	</div>
</div>

