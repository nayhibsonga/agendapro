		<div class="tab-pane" id="payments">
			<div class="scrollable" style="max-height: 220px;">
				<h4>Pagos en línea</h4>
				<table class="companies-table">
					<tr class="companies-table-header">
						<th>
							Fecha
						</th>
						<th>
							Monto
						</th>
						<th>
							Meses
						</th>
						<th>
							Número de cuotas
						</th>
						<th>
							Número de operación
						</th>
						<th>
							Código de autorización
						</th>
					</tr>

					<% logs = @company.billing_logs.order('created_at desc') %>
					<% logs.each do |log| %>
						<tr>
							<% punto_pago = PuntoPagosConfirmation.find_by_trx_id(log.trx_id) %>
							<td>
								<%= log.created_at %>
							</td>
							<td>
								<%= log.payment %>
							</td>
							<td>
								<%= log.amount %>
							</td>
							<% if punto_pago.nil? %>
								<td></td>
								<td></td>
								<td></td>
							<% else %>
								<td>
									<%= punto_pago.dues_number %>
								</td>
								<td>
									<%= punto_pago.operation_number %>
								</td>
								<td>
									<%= punto_pago.authorization_code %>
								</td>
							<% end %>
						</tr>
					<% end %>

				</table>
			</div>

			<div class="scrollable" style="max-height: 220px;">
				<h4>Otros pagos</h4>
				<table class="companies-table">
					<tr class="companies-table-header">
						<th>
							Fecha
						</th>
						<th>
							Tipo
						</th>
						<th>
							Monto
						</th>
					</tr>

					<% records = @company.billing_records.order('date desc') %>
