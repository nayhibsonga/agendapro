					<% bl = BillingLog.where(:company_id => @company.id).order('created_at desc').first %>
					<% rec = BillingRecord.where(:company_id => @company.id).order('date desc').first %>
					<% if !bl.nil? && !rec.nil? %>
						<%if bl.created_at <= rec.date %>
							<%= rec.date %>
						<% else %>
							<%= bl.created_at %>
						<% end %>
					<% elsif bl.nil? && !rec.nil? %>
						<%= rec.date %>
					<% elsif !bl.nil? && rec.nil? %>
						<%= bl.created_at %>
					<% else %>
						No existen pagos
					<% end %>
				</div>
			</div>
