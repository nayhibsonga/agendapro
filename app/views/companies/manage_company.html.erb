<% content_for :scripts do %>
	<%= javascript_include_tag "jquery-ui-1.10.4.min.js" %>

	<script type="text/javascript">
		$("#year-select").on('change', function(){
			var year = $(this).val();
			var id = <%= @company.id %>;
			$.ajax({
				url: '/get_year_incomes?id=' + id + '&year=' + year,
				method: 'get',
				success: function(response){

					$("#year-incomes table").empty();

					$("#year-incomes table").append('<tr class="companies-table-header">');
					for(i=1; i<=13; i++)
					{
						$("#year-incomes table tr:first").append('<th>'+response[i]['month']+'</th>');
					}
					//$("#year-bookings table").append('</tr>');
					$("#year-incomes table").append('<tr>');
					for(i=1; i<=13; i++)
					{
						$("#year-incomes table tr:last").append('<td>'+response[i]['income']+'</td>');
					}
					//$("#year-bookings table").append('</tr>');

					$("#selected-year").empty();
					$("#selected-year").append(year);
							
				},
				error: function(){

				}
			});
		});

		$(document).ready(function(){
			$("#year-select").trigger('change');
		});

		$("#deactivateBtn").click(function(e){
			e.preventDefault();
			var r = confirm("¿Estás seguro que deseas desactivarla?");
			if (r == true)
			{
				$(this).closest("form").submit();
			}
		});

		$("#bookings-year-select").on('change', function(){
			var year = $(this).val();
			var id = <%= @company.id %>;
			$.ajax({
				url: '/get_year_bookings?id=' + id + '&year=' + year,
				method: 'get',
				success: function(response){

					$("#year-bookings table").empty();

					$("#year-bookings table").append('<tr class="companies-table-header">');
					for(i=1; i<=13; i++)
					{
						$("#year-bookings table tr:first").append('<th>'+response[i]['month']+'</th>');
					}
					//$("#year-bookings table").append('</tr>');
					$("#year-bookings table").append('<tr>');
					for(i=1; i<=13; i++)
					{
						$("#year-bookings table tr:last").append('<td>'+response[i]['count']+'</td>');
					}
					//$("#year-bookings table").append('</tr>');

					$("#bookings-selected-year").empty();
					$("#bookings-selected-year").append(year);
							
				},
				error: function(){

				}
			});
		});

		$(document).ready(function(){
			$("#bookings-year-select").trigger('change');
		});

	</script>

<% end %>