<div class="container">
  <div class="row">
    <section class="hgroup">
		<h2>E-mail a Clientes</h2>
      	<h2 class="section_header">Acá podrás enviarle e-mails a tus clientes contandole de tus servicios o promociones.</h2>
      	<div class="line-breadcrumb">
        <ul class="breadcrumb pull-right">
            <li><%= link_to "Resumen", dashboard_path %> </li>
	        <li><%= link_to "Clientes", clients_path %> </li>
            <li class="active">E-mail</li>
        </ul>
    </div>
    </section>
  </div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-12">

		</div>
	</div>
	<div class="row well">
		<%= form_tag('/send_mail_client', name: "client_mailer", id: "client_mailer", multipart: true) do %>
			<div class="form-group">
				<%= label_tag :from, 'De' %>
				<%= select_tag :from, options_from_collection_for_select(@from_collection, :email, :email), :class => 'form-control', :required => true %>
				<span class="help-block"></span>
			</div>
			<div class="form-group">
				<%= label_tag :to, 'Para' %><small class="pull-right"> Estas enviando el e-mail a <%= pluralize(params[:to].length, 'persona') %>.</small>
				<%= text_field_tag :to, @to, :class => 'form-control', :required => true, :placeholder => 'ejemplo@dominio.com (requerido)' %>
				<span class="help-block"></span>
			</div>
			<div class="form-group">
				<%= label_tag :subject, 'Asunto' %>
				<%= text_field_tag :subject, nil, :class => 'form-control', :required => true, :autofocus => true, :placeholder => 'Asunto (requerido)' %>
				<span class="help-block"></span>
			</div>
			<div class="form-group">
				<%= label_tag :message, 'Mensaje' %>
				<%= text_area_tag :message, nil, :class => 'form-control', :rows => 8, :required => true, :placeholder => 'Mensaje (requerido)' %>
				<span class="help-block"></span>
			</div>
			<div class="form-group">
				<%= label_tag :attachment, 'Archivo Adjunto' %>
				<%= file_field_tag :attachment, :class => 'form-control' %>
				<span class="help-block"></span>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-agendapro-claro" data-loading-text='<i class="fa fa-envelope-o"></i> Enviando...' autocomplete="off"><i class="fa fa-envelope-o"></i><span> Enviar</span></button>
				<p>NOTA: Todos los e-mails son enviados como copia oculta</p>
			</div>
		<% end %>
	</div>
</div>

<% content_for :scripts do %>
	<%= javascript_include_tag 'validations/validate' %>
	<%= javascript_include_tag 'validations/admin/client-email' %>
	<%= javascript_include_tag 'ckeditor/init' %>
	<script type="text/javascript">
		$(function () {
			CKEDITOR.replace(message);
		});
		$('button[type="submit"]').on('click', function (e) {
			$('#message').val($('#message').val());
			if ($('#client_mailer').valid()) {
				var $btn = $(this).button('loading');
			};
		});
	</script>
<% end %>
