<div id="mail-editor-container" ng-app="AgendaProApp">
  <input type="hidden" id="content-data" name="content-data" value="<%= @content.to_json %>">
  <div id="mail-editor" class="clearfix" ng-controller="EditorController as ec">
    <div id="content" class="col-xs-12 col-md-7">
      <div class="page">
        <div>
            <%= render @tmpl.src %>
        </div>
      </div>

      <div>
        <textarea name="" id="tzt" ng-model="ec.content.data['text1']" cols="30" rows="10"></textarea>
      </div>
    </div>

    <div id="composing" class="col-xs-12 col-md-5">
      <div class="well">

        <div>
          <span class="input-desc">De:</span>
          <%= select_tag :from, options_for_select(@from_collection, @from), {class: 'input-from form-control', required: true, "ng-model" => "ec.content.from"} %>
        </div>

        <div class="total-recipients">
          *Estas enviando el e-mail a <%= @content.to.split(', ').size %> personas.
        </div>

        <div>
          <span class="input-desc to">Para:</span>
          <input type="text" ng-model="ec.content.to" class="input-to" disabled>
        </div>

        <div class="complete-list-button">
          <%= button_tag('Ver lista completa', type: 'button', class: 'btn btn-list', data: {toggle: 'modal', target: '#clientModal'}) %>
          <!-- <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            Launch demo modal
          </button> -->
        </div>

        <div>
          <span class="input-desc subject">Asunto:</span>
          <input type="text" ng-model="ec.content.subject" class="input-subject">
        </div>

      </div>

      <div style="height: auto;">
        <%= cktext_area :editor, 'text1', id: 'text1', cols: 100, ckeditor: {uiColor: '#FFFFFF', height: 350, removePlugins: 'image'}, 'ng-model' => "ec.content.data['text1']", 'custom-ck-editor' => '' %>
      </div>

      <div style="text-align: right; padding: 10px;">
        <button class="btn btn-list" ng-click="vm.send_email = false; ec.saveContent('<%= url_for(:save_content) %>')">Guardar</button>
        <button class="btn btn-green"  ng-click="vm.send_email = true; ec.saveContent('<%= url_for(:save_content) %>');">Guardar y Enviar</button>
      </div>
    </div>


  </div>

</div>

<%= content_for :modals do %>
  <div class="modal fade" id="clientModal" tabindex="-1" role="dialog" aria-labelledby="clientModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="clientModalLabel">Lista de Destinatarios</h4>
        </div>
        <div class="modal-body">
          <p><%= @content.to %></p>
          <!-- <ul class="list-inline">
            <% @content.to.split(', ').each do |to| %>
            <li><%= to%></li>
            <% end %>
          </ul> -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= content_for :scripts do %>
  <%= javascript_include_tag 'admin/email/editor' %>
<% end %>
