<div class="text-container">
  <% if @email %>
    <%= raw(content.data["#{txt_name}"]) %>
  <% else %>
    <div class="editable-box" ng-click="ec.editText('<%= txt_name %>')">
      <div class="centered-content" ng-hide="ec.content.data['<%= txt_name %>']">
        <span class="edit-icon"><i class="fa fa-pencil-square-o"></i></span>
        <br>
        <span>Haz click para comenzar a escribir</span>
      </div>
      <div dynamic="ec.content.data['<%= txt_name %>']"></div>
    </div>
  <% end %>
</div>
