<div class="template-container pull-left" style="width: 200px; height: auto; margin: 0 45px 45px 0;">
  <div class="thumbnail-container" style="border: 1px solid; height: 230px;">
    <%= image_tag(content.template.thumbnail, style: 'height: 100%; width: 100%;') %>
  </div>
  <section style="text-align: right;">
    <p style="margin-top: 10px;"><%= content.try(:name) || content.try(:subject) || content.template %></p>
  </section>
  <section>
    <%= form_tag(:mail_editor, method: "post") do %>
      <%= hidden_field_tag(:recipients, content.to) %>
      <%= hidden_field_tag(:tmpl, content.template.id) %>
      <%= submit_tag("Modificar", class: 'btn btn-green pull-right') %>
    <% end %>
  </section>
</div>
