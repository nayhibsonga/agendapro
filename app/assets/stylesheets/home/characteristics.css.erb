/* Featurettes
------------------------- */

.featurette-divider {
  margin: 30px 0; /* Space out the Bootstrap <hr> more */
  border-color: #53565A;
}
/* Thin out the marketing headings */
.featurette-heading {
  font-weight: 300;
  line-height: 1;
  letter-spacing: -1px;
  color: #22c488;
}
.featurette-heading span.text-muted {
    color: #646464;
}
.lead {
  color: #646464;
  letter-spacing: -1px;
}
section.green-background h2.featurette-heading {
  color: #646464;
}
section.green-background h2.featurette-heading span.text-muted {
  color: #ffffff;
}
section.green-background p.lead {
  color: #ffffff;
}
