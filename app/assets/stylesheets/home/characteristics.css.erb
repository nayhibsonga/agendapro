  max-height: 312px;
}
.half-tablet-maxheight {
  /*max-height: 162px;*/
}
.row-padded {
  padding-top: 0;
  padding-bottom: 50px;
}
.tutorial-pointer {
  margin-top: 20px;
}

h1.main-title {
  font-weight: 900;
}

h1.main-title > span {
  color: #22c488;
}

.img-center.img-responsive {
    margin: 0 auto;
}

section.gray-background {
  background-color: #f6f6f6;
}

.sector-tabs .btn-group {
  border: 1px solid #cccccc;
}

.sector-tabs .btn-group .btn {
  border: none;
  padding-top: 16px;
  background-color: #ffffff;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  font-weight: 900;
  font-size: 16px;
  border-radius: 0;
}

.sector-tabs .btn-group .btn:hover {
  background-color: #dddddd;
}

.sector-tabs .btn-group .btn.active {
  color: #22c488;
  position: relative;
  background: #eeeeee;
}

.sector-tabs .btn-group .btn .sector-img-off {
  display: inline-block;
}

.sector-tabs .btn-group .btn .sector-img-on {
  display: none;
}

.sector-tabs .btn-group .btn.active .sector-img-off {
  display: none;
}

.sector-tabs .btn-group .btn.active .sector-img-on {
  display: inline-block;
}

.sector-tabs .btn-group .btn.active:hover {
  background-color: #dddddd;
}

.sector-tabs .btn-group .btn.active:after, .sector-group .btn-group .btn.active:before {
  top: 100%;
  left: 50%;
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
}

.sector-tabs .btn-group .btn.active:after {
  border-color: rgba(238, 238, 238, 0);
  border-top-color: #eeeeee;
  border-width: 9px;
  margin-left: -9px;
}

.sector-tabs .btn-group .btn.active:before {
  border-color: rgba(204, 204, 204, 0);
  border-top-color: #cccccc;
  border-width: 12px;
  margin-left: -12px;
}

.img-text-container {
  position: relative;
  width: 100%;
}

/*.img-text-container > img {
  position: absolute;
  left: 0;
