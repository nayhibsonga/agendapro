@charset "UTF-8";

body {
  -webkit-font-smoothing: antialiased;
  background: url(<%= asset_path 'backgrounds/wild_oliva_light.png' %>);
}
a {
	color: rgba(61,154,150,1);
	text-decoration: none;
}
a:hover {
	color: rgba(27,115,112,1);
}

/* Barra superior */
#barra-superior {
background: rgba(27,115,112,1);
height: 44px;
}
#logo{
	display: inline-block;
 	width:127px;
  	height:39px;
	margin: 2px 0px 0px 0px;
	background: url(<%= asset_path 'logos/logo_agendaproVerde.png' %>);
}
#logo span{
	display: none;
}
.nav li a{
	padding: 12px 15px;
}
.nav-pills>li>a {
	color: #fff;
	text-transform: uppercase;
	font-weight: 300;
}
.nav-pills>li.active>a{
	background: rgba(255,255,255,0.2);
	border-radius: 0px;
	font-weight: bold;
}
.nav-pills>li:hover>a, .nav>li>a:focus{
	background: rgba(255,255,255,0.2);
	border-radius: 0px;
}
.nav .open>a {
	background: rgba(255,255,255,0.2) !important;
	border-radius: 0px;
	color: #fff;
}
.dropdown-menu>li>a {
	padding: 8px 10px;
}
.dropdown-menu>li>a:hover {
	background: rgba(27,115,112,1);
}

/* Botones Modificados AgendaPro */
.btn-success{
	color: #ffffff;
	background-color: #D55330;
	border-color: #E64215;
}
.btn-success:hover{
	background-color: #EB4114;
	border-color: #EB4114;
}

.btn-agendapro-oscuro{
    color: #ffffff;
    background-color: rgba(27,115,112,1);
    border-color: rgba(24, 101, 99, 1);
}

.btn-agendapro-oscuro:hover{
    background-color: rgba(24, 101, 99, 1);
}

.btn-agendapro-claro{
    color: #ffffff;
    background-color: rgba(61,154,150,1);
    border-color: rgba(55, 133, 129, 1);
}

.btn-agendapro-claro:hover{
    background-color: rgba(55, 133, 129, 1);
}


/* Estilo de los Modales */

.modal-content{
	background: url(<%= asset_path 'backgrounds/wild_oliva_light.png' %>);
}

.modal-header{
    background: url(<%= asset_path 'backgrounds/wild_oliva_light_head.png' %>);
}

.modal-footer{
	background: url(<%= asset_path 'backgrounds/wild_oliva_light_head.png' %>);
}

/* ---------- */
.carousel-inner{
	height: 500px;
}
.carousel-inner .item img{
	width: 100%;
	height: auto;
}
.caja-slider-home{
	width: 100%;
	height: 500px;
	background-position: center;
	background-size: cover;
}
#slide1{
	background-image: url(<%= asset_path 'home/carousel1.png' %>);
}
#slide2{
	background-image: url(<%= asset_path 'home/carousel2.jpg' %>);
}
#slide3{
	background-image: url(<%= asset_path 'home/carousel3.jpg' %>);
}
.carousel-caption{
	bottom: 80px;
	left: 10%;
}
.green-caption{
	background: rgba(27,115,112,0.5);
	text-align: left;
	width: 50%;
}
.green-caption h2{
	font-weight: 200;
	font-size: 28px;
	margin: 20px 20px 10px;
	float: left;
}
.green-caption p{
	font-size: 21px;
	margin: 0px 20px 20px;
	float: left;
}
.clear{
	clear: both;
}
.carousel-control span{
  margin-top: 230px;
  font-size: 28px;
}

/* ----------- */
#mensaje-principal{
	text-align: center;
}
#mensaje-principal h3{
	font-weight: 400;
}
#mensaje-principal a{
	margin-top: 20px;
}

/* ----------- */
