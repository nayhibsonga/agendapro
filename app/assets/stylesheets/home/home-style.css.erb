	background-image: url(<%= asset_path 'home/features/planes.jpg' %>);
}

/* My Agenda */
.publicidad-agenda {
	height: 150px;
	background-color: #ccc;
	border-radius: 8px;
	background-size: cover;
	background-position: center;
	margin-bottom: 20px;
}

.nombre-publicidad {
	background: rgba(27,115,112,1);
	color: #fff;
	padding: 3px 5px 3px 10px;
	margin-top: 100px;
	display: block;
	float: left;
}

.crear-empresa img {
	width: 100%;
	height: auto;
}

.publicidad-agenda > a {
	height: 100%;
	border-radius: 8px;
}

/* Estilo Sobre Nosotros */
.team_member {
	text-align: center;
	/* background-color: #000; */
	background-color: #1e8584;
	/* background: url(images/backgrounds/wild_oliva_dark.png); */
	color: #E2E3E4;
	padding: 40px;
