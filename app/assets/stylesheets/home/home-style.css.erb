/* Estilo de la p√°gina de los planes */
.hgroup {
	padding-top: 26px;
	padding-bottom: 26px;
}
.hgroup .container h1 {
	color: #006D68;
}
.hgroup .container h1 {
	font-size: 50px;
	font-weight: 500;
	line-height: 1em;
	margin: 0;
	padding: 0;
}
.hgroup .container h2 {
	font-size: 25px;
	font-weight: 300;
	line-height: 1.5em;
	margin: 0 20% 0 0;
	padding: 0;
	color: #7b7b7b;
}
.hgroup .container .breadcrumb {
	font-size: 12px;
	background-color: #f3f3f3;
	margin: 0 0 0px;
	padding: 6px 15px;
	border: solid 1px #cccccc;
}
.pricing_wrapper .pricing_plan h3 {
	background-color: #eeeeee;
	padding: 30px 5px;
	margin: 0 0 10px 0;
	color: #1e8584;
	font-size: 30px;
	border-top-right-radius: 6px;
	border-top-left-radius: 6px;
	border-bottom: solid 1px #cccccc;
}
.pricing_wrapper .pricing_plan a.btn {
	margin: 30px;
	border-radius: 5px;
	padding-left: 30px;
	padding-right: 30px;
}
.pricing_wrapper .pricing_plan {
	-webkit-box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.1);
	-moz-box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.1);
	box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.1);
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	border-radius: 6px;
	text-align: center;
	border: solid 1px #1e8584;
}
.pricing_wrapper .pricing_plan .the_price {
	padding: 5px;
	font-size: 40px;
	margin: 20px auto;
	width: 80%;
	color: #1e8584;
	text-shadow: 1px 1px 0px #ffffff;
	border-bottom: dotted 1px #cccccc;
	line-height: 1.1;
}
.pricing_wrapper .pricing_plan .the_price span {
	font-size: 30px;
}
.pricing_wrapper .pricing_plan .the_price small {
	font-size: 18px;
}
.line-breadcrumb{
	height: 30px;
	width: 100%;
	background-image: url(<%= asset_path 'home/features/line.png' %>);
}

.imagen_superior {
	height: 400px;
	background-size: cover;
	background-position: center center;
	width: 100%;
}

.imagen_superior>div.container> div.green-caption {
	margin-top: 170px;
