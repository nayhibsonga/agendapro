@charset "UTF-8";

/* Resultado Search */
#searchbar-result{
    margin-top: 18px;
}
.header-busqueda{
    height: 70px;
}
.google-maps-search {
    position: relative;
    padding-bottom: 75%; // This is the aspect ratio
    height: 0;
    overflow: hidden;
    box-shadow: 2px 2px 4px #ccc;
    border-top: 1px solid #ccc;
    border-left: 1px solid #ccc;
}

.number-pin{
    display: block;
    height: 30px;
    width: 22px;
    float: left;
    background: url(<%= asset_path 'pin.png' %>);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center top;
}
.number-pin span{
    display: block;
    width: 22px;
    text-align: center;
    color: #fff;
    font-size: 11px;
    margin-top: 3px;
}
.title-local{
    display: inline-block;
    font-size: 21px;
    padding: 3px 0px 8px 10px;
}
.data-local-search{
    width: 80%;
    float: left;
    margin-top: 20px;
}
.img-local-search{
    float: left;
    width: 80px;
    height: 80px;
    border-radius: 20px;
    /*background: #ccc;*/
    margin-top: 20px;
    margin-left: 15px;
    overflow: hidden;
}
.img-local-search img{
    width: auto;
    height: 100%;
}
.fix-position-search{
    margin-top: 20px;
}

#map {
    position: relative;
    padding-bottom: 75%; // This is the aspect ratio
    height: 0;
    overflow: hidden;
    box-shadow: 2px 2px 4px #ccc;
    border-top: 1px solid #ccc;
    border-left: 1px solid #ccc;
    max-height: 330px;
}

.header {
    background-color: #A6A6A6;
    padding: 5px 5px;
    font-weight: bold;
    font-size: 24.5px;
}

.box-tabs{
    width: calc(100% - 100px);
    float: left;
}

.pin {
    position: relative;
    width: 100%; /* for IE 6 */
    display: inline;
}

.pin span { 
    position: absolute;
    left: 0;
    bottom: 8px;
    width: 22px;
    font-weight: bold;
    font-size: 12px;
    color: white;
    text-align: center;
}

.portfolio_teasers_wrapper > .container {
    max-width: 1000px;
}

.panel-default > .panel-heading {
    background-color: #ffffff;
    background-image: none;
}
