/* Se agrega estilo de títulos y textos varios */
.hgroup {
	padding-top: 26px;
	/*padding-bottom: 26px;*/
}
.hgroup .container h1 {
	color: #006D68;
}
.hgroup .container h1 {
	font-size: 50px;
	font-weight: 500;
	line-height: 1em;
	margin: 0;
	padding: 0;
}
.hgroup h2 {
	font-size: 35px;
	font-weight: 300;
	line-height: 1.5em;
	margin: 0 20% 0 0;
	padding: 0;
	color: #505050;
}
h2.section_header {
	font-size: 18px;
	line-height: 22px;
	font-weight: 400;
}
h3.link_section_header {
	font-size: 24px;
	line-height: 22px;
	font-weight: 400;
	margin-top: 5px;
	color: #505050;
}
.hgroup .breadcrumb {
	font-size: 12px;
	background-color: #f3f3f3;
	padding: 6px 15px;
	border: solid 1px #cccccc;
}
.line-breadcrumb{
	height: 30px;
	width: 100%;
	background-image: url(<%= asset_path 'home/features/line.png' %>);
	margin-top: 5px;
}
.breadcrumb>.active {
	color: #999;
}

/* Se agrega para cada paso del QuickAdd */
.step-workflow{
	min-height: 590px;
}

.step-workflow-min{
	min-height: 280px;
}

/* Se agrega para achicar los selectores de las horas que estaban muy grandes. Quedan para pantallas de 1280px */
.time-select{
	padding-left: 4px;
	padding-right: 4px;
}

.date-select{
	padding-left: 6px;
	padding-right: 6px;
	width: auto;
	display: inline;
}

#wrap-admin{
	min-height: 100%;
	height: auto;
	margin: 0 auto -40px;
	padding: 0 0 40px;
}
footer{
	height: 40px;
	background-color: #383e4b;
	color: #ffffff;
}
.footer-data{
	margin-top: 10px;
}
.fix-height{
	min-height: 100%;
}
header{
	height: 44px;
	width: 100%;
	background: rgba(27,115,112,1);
}
#logo{
	width:127px;
	height:39px;
	margin: 2px 0px 0px 20px;
	background: url(<%= asset_path 'logos/logo_agendaproVerde.png' %>);
	float: left;
}
#menu-usuario{
	list-style: none;
	padding: 0px;
	margin: 0px;
	position: absolute;
	right: 60px;
	top: 0px;
	z-index: 9999;
}
#menu-usuario li a{
	display: block;
	height: 44px;
	line-height: 2.8;
	padding: 0px 10px;
	color: #333;
	font-weight: bold;
	text-decoration: none;
}
#menu-usuario li a:hover{
	background: rgba(27,115,112,1);
	color: #fff;
}
#menu-usuario ul{
	list-style: none;
	padding: 0px;
	margin: 2px 0px;
}
.close-menu-usuario{
	display: none;
}
#menu-usuario ul li a{
	height: 35px;
	line-height: 2.3;
	border-bottom: 0px;
	background: #fff;
}
#sub-menu-usuario{
	background: #fff;
	border: 1px solid #ccc;
	border: 1px solid rgba(0,0,0,0.15);
	border-radius: 4px;
	-webkit-box-shadow: 0 6px 12px rgba(0,0,0,0.175);
	box-shadow: 0 6px 12px rgba(0,0,0,0.175);
	padding: 5px 1px !important;
}
#open-usuario{
	color:#fff !important;
}
#menu-config{
	list-style: none;
	padding: 0px;
	margin: 0px;
	position: absolute;
	right: 20px;
	top: 0px;
	z-index: 9999;
}
#menu-config li a{
	display: block;
	height: 44px;
	line-height: 2.8;
	padding: 0px 10px;
	color: #333;
	font-weight: bold;
	text-decoration: none;
}
/*#menu-config i{
	margin-left: 100%;
}*/
#menu-config li a:hover{
	background: rgba(27,115,112,1);
	color: #fff;
}
#menu-config ul{
	list-style: none;
	padding: 0px;
	margin: 2px 0px;
}
.close-menu-config{
	display: none;
}
#menu-config ul li a{
	height: 35px;
	line-height: 2.3;
	border-bottom: 0px;
	background: #fff;
}
#sub-menu-config{
	background: #fff;
	border: 1px solid #ccc;
	border: 1px solid rgba(0,0,0,0.15);
	border-radius: 4px;
	-webkit-box-shadow: 0 6px 12px rgba(0,0,0,0.175);
	box-shadow: 0 6px 12px rgba(0,0,0,0.175);
	padding: 5px 1px !important;
