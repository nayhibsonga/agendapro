@charset "UTF-8";

html, body{
	height: 100%;
}
body{
	background: rgba(163,199,198,1); 
	background: url(<%= asset_path 'backgrounds/wild_oliva_light_head.png' %>);
}
#wrap-admin{
	min-height: 100%;
	height: auto;
	margin: 0 auto -40px;
	padding: 0 0 40px;
}
footer{
	height: 40px;
	background-color: #383e4b;
	color: #ffffff;
}
.footer-data{
	margin-top: 10px;
}
.fix-height{
	min-height: 100%;
}
header{
	height: 44px;
	width: 100%;
	background: rgba(27,115,112,1);
}
#logo{
	width:127px;
	height:39px;
	margin: 2px 0px 0px 20px;
	background: url(<%= asset_path 'logos/logo_agendaproVerde.png' %>);
	float: left;
}
#menu-usuario{
	list-style: none;
	padding: 0px;
	margin: 0px;
	position: absolute;
	right: 20px;
	top: 0px;
	z-index: 9999;
}
#menu-usuario li a{
	display: block;
	height: 44px;
	line-height: 2.8;
	padding: 0px 10px;
	color: #ffffff;
	font-weight: bold;
	text-decoration: none;
	border-bottom: 1px solid #383e4b;
}
#menu-usuario li a:hover{
	background: #ccc;
	color: #383e4b;
}
#menu-usuario ul{
	list-style: none;
	padding: 0px;
	margin: 0px;
}
.close-menu-usuario{
	display: none;
}
#menu-usuario ul li a{
	height: 35px;
	line-height: 2.3;
	border-bottom: 0px;
	background: #383e4b;
}
.container{
	width:100% !important;
}

#admin-content{
	background: #ffffff;
	background: url(<%= asset_path 'backgrounds/wild_oliva_light.png' %>);
	min-height: 100%;
	width: 83.33333333333334%;
	float:left;
	padding-bottom: 50px;
}
#sidebar{
	padding: 0px;
	min-width: 50px;
	width:16.666666666666664%;
	float: left;
}
.colapsar{
	width:50px !important;
}
.expandir{
	width: calc(100% - 50px) !important;
}
.submenu-close{
	overflow: hidden;
	height: 0px;
}
.menu-lateral, .menu-lateral ul{
	padding: 0px;
	margin:0px;
	list-style: none;
	font-size: 16px;
}
.menu-lateral{
	margin-top: 50px;
	border-top: 1px solid #ccc;
}
.menu-lateral li{
	border-bottom: 1px solid #ccc;
}
.menu-lateral ul li{
	border-bottom: none;
}
.menu-lateral li a{
	color: rgba(27,115,112,1);
	padding: 15px 0px 15px 15px;
	display: block;
}
.menu-lateral ul li a{
	color: rgba(27,115,112,1);
	padding: 10px 0px 10px 25px;
	display: block;
	font-size: 15px;
}
.menu-lateral li a:hover, .menu-lateral ul li a:hover{
	text-decoration: none;
	background: rgba(27,115,112,1);
	color: #fff;
}
.content-fix{
	margin: 0px 70px;
}
.menu-lateral li:last-child{
	border-bottom: 0px;
}
#closetab{
	margin-top:40px;
}
li.colapsado-ok{
	font-size: 21px;
}
li.colapsado-ok> a> span.colapse-hidden{
	display:none;
}
.kill-txt{
	display: none;
}


/* Agregado 18 Febrero */
.caret-especial{
	float: right;
	margin-right: 10px;
	font-size: 21px;
}
.panel-info {
	border-color: rgba(27,115,112,0.6);
}
.panel-info>.panel-heading {
	color: rgba(27,115,112,1);
	background-color: rgba(27,115,112,0.4);
	border-color: rgba(27,115,112,0.67);
}
.btn-primary {
	color: #fff;
	background-color: rgba(27,115,112,0.9);
	border-color: rgba(27,115,112,1);
}
.btn-primary:hover{
	background-color: rgba(27,115,112,1);
}
#providers-selector{
	width:100%;
	border: 1px solid rgba(27,115,112,1);
	background: #ccc;
	padding: 0px;
	border-radius: 5px;
	overflow: hidden;
}
#providers-selector label{
	display: inline-block;
	background: #ccc;
	padding: 0px 25px;
}
#providers-selector label:hover{
	background: rgba(27,115,112,1);
	color: #fff;
}
#providers-selector label.active{
	background: rgba(27,115,112,1);
	color: #fff;
}
#providers-selector input[type="radio"]{
	display: none;
}
#providers-selector p{
	margin: 10px 0 10px;
}
#locals-selector{
	width:100%;
	border: 1px solid rgba(27,115,112,1);
	background: #ccc;
	padding: 0px;
	border-radius: 5px;
	overflow: hidden;
}
#locals-selector label{
	display: inline-block;
	background: #ccc;
	padding: 0px 25px;
}
#locals-selector label:hover{
	background: rgba(27,115,112,1);
	color: #fff;
}
#locals-selector label.active{
	background: rgba(27,115,112,1);
	color: #fff;
}
#locals-selector input[type="radio"]{
	display: none;
}
#locals-selector p{
	margin: 10px 0 10px;
}
#calendar{
	margin-top: 15px;
}
thead{
	background: rgba(27,115,112,0.6);
	color: #fff;
}
tbody{
	background: rgba(255, 255, 255, 0.76);
}
.table-bordered{
	border: 1px solid rgba(27,115,112,0.6);
}

/* Jquery UI Datepicker */
.ui-datepicker {
    background-color: #FFF;
    z-index: 99999 !important;
}

/* Quick Add */
#navegacion-workflow{
	margin:10px 0px 0px 0px;
	background: #F3F3F3;
	border: 1px solid #ccc;
	border-radius: 5px;
	padding:5px 0px;
}
.btn-success{
	color: #ffffff;
	background-color: #FA4616;
	border-color: #E64215;
}
.pasos-reserva a{
	height:33px;
	width: 30%;
	margin:0px 1.5%;
	float:left;
	text-align: center;
	background: #D1D1D1;
	bordert:1px solid #999;
	color: #fff;
	line-height: 2.4;
	border-radius: 5px;
	border:1px solid #585656;
}
.pasos-reserva a:hover, .pasos-reserva a.selected{
	background-color: rgba(250, 70, 22, 0.45);
	border:1px solid #FA4616;
}
#espacio-workflow{
	margin-top:10px;
}

.box-step{
	min-height:400px;
	background:#F3F3F3;
	border: 1px solid #C0C0C0;
	border-radius: 5px;
	float:left;
}
#control-slide li{
	display: inline-block;
}
.control-box{
	background-color: #ccc;
	display: block;
	padding: 6px 0px;
	margin-bottom: 0;
	font-size: 14px;
	font-weight: normal;
	line-height: 1.428571429;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	cursor: pointer;
	background-image: none;
	border: 1px solid transparent;
	border-radius: 4px;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
	user-select: none;
}
li.selected> div.control-box{
	background: rgba(27,115,112,0.4);
}

/* Menu responsivo */
@media (max-width: 992px) { 
	#admin-content{
		width: calc(100% - 50px) !important;
	}
	#sidebar{
		width: 50px !important;
	}
	.colapse-hidden{
		display: none;
	}
	.remove-txt{
		display: none;
	}
	.menu-lateral{
		font-size: 21px;
	}
	#submenu>li>a, #submenu2>li>a, #submenu3>li>a{
		font-size: 18px;
		padding-left: 20px;
	}
	.content-fix{
		margin: 0px 30px;
	}
}

