	min-height: 100%;
	width: 83.33333333333334%;
	float:left;
	padding-bottom: 50px;
}
#sidebar{
	padding: 0px;
	min-width: 50px;
	width:16.666666666666664%;
	float: left;
}
.colapsar{
	width:50px !important;
}
.expandir{
	width: calc(100% - 50px) !important;
}
.submenu-close{
	overflow: hidden;
	height: 0px;
}
.menu-lateral, .menu-lateral ul{
	padding: 0px;
	margin:0px;
	list-style: none;
	font-size: 16px;
}
.menu-lateral{
	margin-top: 50px;
	border-top: 1px solid #ccc;
}
.menu-lateral li{
	border-bottom: 1px solid #ccc;
	cursor: pointer;
}
.menu-lateral ul li{
	border-bottom: none;
}
.menu-lateral li a{
	color: rgba(27,115,112,1);
	padding: 15px 0px 15px 15px;
	display: block;
}
.menu-lateral ul li a{
	color: rgba(27,115,112,1);
	padding: 10px 0px 10px 25px;
	display: block;
	font-size: 15px;
}
.menu-lateral li a:hover, .menu-lateral ul li a:hover{
	text-decoration: none;
	background: rgba(27,115,112,1);
	color: #fff;
}
.menu-lateral li a.active, .menu-lateral ul li a.active{
	text-decoration: none;
	background: rgba(27,115,112,1);
	color: #fff;
}
.content-fix{
	margin: 0px 70px;
}
.menu-lateral li:last-child{
	border-bottom: 0px;
}
#closetab{
	margin-top:40px;
	color: #777;
	font-size: 0.8em;
}
#closetab:hover{
	background: #ccc;
}
li.colapsado-ok{
	font-size: 21px;
}
li.colapsado-ok> a> span.colapse-hidden{
	display:none;
}
.kill-txt{
	display: none;
}

.center-block {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

/* Agregado 18 Febrero */
.caret-especial{
	float: right;
	margin-right: 10px;
	font-size: 21px;
}

#calendar{
	margin-top: 15px;
}
thead{
	background: rgba(27,115,112,0.6);
	color: #fff;
}
tbody{
	background: rgba(255, 255, 255, 0.76);
}
.table-bordered{
	border: 1px solid rgba(27,115,112,0.6);
}

/* Jquery UI Datepicker */
.ui-datepicker {
    background-color: #FFF;
    z-index: 99999 !important;
}

/* Quick Add */
#navegacion-workflow{
	margin:10px 0px 0px 0px;
	background: #F3F3F3;
	border: 1px solid #ccc;
	border-radius: 5px;
	padding:5px 0px;
}
.pasos-reserva a{
	height:33px;
	width: 30%;
	margin:0px 1.5%;
	float:left;
	text-align: center;
	background: #D1D1D1;
	bordert:1px solid #999;
	color: #fff;
	line-height: 2.4;
	border-radius: 5px;
	border:1px solid #585656;
}
.pasos-reserva a:hover, .pasos-reserva a.selected{
	background-color: rgba(250, 70, 22, 0.45);
	border:1px solid #FA4616;
}
#espacio-workflow{
	margin-top:10px;
}

.box-step{
	/*min-height:350px;*/
	background:#F3F3F3;
	border: 1px solid #C0C0C0;
	border-radius: 5px;
	float:left;
}
#control-slide li{
	display: inline-block;
}
.control-box{
	background-color: #ccc;
	display: block;
	padding: 6px 0px;
	margin-bottom: 0;
	font-size: 14px;
	font-weight: normal;
	line-height: 1.428571429;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	cursor: pointer;
	background-image: none;
	border: 1px solid transparent;
	border-radius: 4px;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
	user-select: none;
}
li.selected> div.control-box{
	background: rgba(27,115,112,0.4);
}

.ui-datepicker-trigger {
	margin-left: 5px;
}

.modal-trigger {
	margin-left: 5px;
}

/* Agregar margen a las filas, usado en vista cliente */
.top-buffer { 
	margin-top:20px; 
}

/* Paginación */

.fixed-panel{
    max-height: 250px;
    overflow-y:scroll; 
}
.table-checkboxes label
{
    max-width: 90%;
}
