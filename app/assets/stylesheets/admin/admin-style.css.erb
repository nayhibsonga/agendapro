}
#open-config{
	color:#fff !important;/*
	margin-left: 80%;*/
}
.container{
	width:100% !important;
}

#admin-content{
	background: #ffffff;
	background: url(<%= asset_path 'backgrounds/wild_oliva_light.png' %>);
	/*background: #ececec;
	background: -moz-linear-gradient(top,  #ececec 0%, #f0f6f6 100%);
