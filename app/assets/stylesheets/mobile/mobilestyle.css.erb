html,
body {
	font-family: 'Roboto Condensed', sans-serif;
	background: #ffffff;
	font-size: 17px;
}
h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
	font-family: 'Roboto Condensed', sans-serif;
	line-height: 1.1;
}
h1, .h1 {
  font-size: 2.22em;
}
h2, .h2 {
  font-size: 1.86em;
}
h3, .h3 {
  font-size: 1.51em;
}
h4, .h4 {
  font-size: 1.16em;
}
h5, .h5 {
  font-size: 0.92em;
}
h6, .h6 {
  font-size: 0.81em;
}

a {
	color: #22c488;
}

.pull-center {
	text-align: center;
	display: block;
	margin-left: auto;
	margin-right: auto;
}

/*Pagination*/
.pagination > li > a,
.pagination > li > span {
	color: #22c488;
}
.pagination > li > a:hover,
.pagination > li > span:hover,
.pagination > li > a:focus,
.pagination > li > span:focus {
	color: #eeeeee;
}
.pagination > .active > a,
.pagination > .active > span,
.pagination > .active > a:hover,
.pagination > .active > span:hover,
.pagination > .active > a:focus,
.pagination > .active > span:focus {
	background-color: #22c488;
	border-color: #22c488;
}
.pagination > .disabled > span,
.pagination > .disabled > span:hover,
.pagination > .disabled > span:focus,
.pagination > .disabled > a,
.pagination > .disabled > a:hover,
.pagination > .disabled > a:focus {
	color: #505050;
}
.pagination > li > a:hover,
.pagination > li > span:hover,
.pagination > li > a:focus,
.pagination > li > span:focus {
	color: #22c488;
}
/*End Pagination*/

/*** alert ***/
.alert {
	position: fixed;
	margin: 55px auto 10px;
	width: 75%;
	z-index: 10000;
	left: 5%;
	right: 5%;
	padding: 10px 15px;
}
.alert-dismissable,
.alert-dismissible {
	padding-right: 35px;
}

/*Forms*/
.help-block > label.error {
	font-weight: normal;
}
.datetime-select {
  display: inline-block;
  padding-left: 6px;
  padding-right: 6px;
  width: calc(100% / 3 - 3px);
}

/*Modals*/
.modal {
	top: 50px;
}

/*Menu*/
.navbar-agendapro .navbar-nav > li > a {
	color: #777;
}
.navbar-agendapro .navbar-nav > li > a.menu-green {
	color: #22c488;
}
.navbar-agendapro .navbar-nav > li > a.menu-green:hover,
.navbar-agendapro .navbar-nav > li > a.menu-green:focus,
.navbar-agendapro .navbar-nav > li > a.menu-green:active {
	color: #ffffff;
	background-color: transparent;
}
.navbar-agendapro .navbar-nav > li > a.menu-orange {
	color: #fd9610;
}
.navbar-agendapro .navbar-nav > li > a.menu-orange:hover,
.navbar-agendapro .navbar-nav > li > a.menu-orange:focus,
.navbar-agendapro .navbar-nav > li > a.menu-orange:active {
	color: #ffffff;
	background-color: transparent;
}

