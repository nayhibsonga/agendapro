.home-footer {
  background-color: #363636;
  color: #ffffff;
}

.home-footer a {
  color: #ffffff;
}

.home-footer > .container > .row {
  margin-top: 20px;
}

.home-footer .padded-col {
  padding: 20px;
}

.home-footer .bordered-col {
  border: 2px solid #ffffff;
  margin: 5px;
}

.home-footer a:hover, .home-footer a:focus {
