  color: #ffffff;
}

#home-cover-image h1 {
  font-size: 24px;
}

#home-cover-image h1 span {
  font-weight: 900;
  font-style: italic;
}

#home-cover-image p {
  font-size: 20px;
  font-weight: 900;
  text-align: justify;
}

#home-cover-image h3 {
  font-size: 24px;
  font-weight: 900;
}

