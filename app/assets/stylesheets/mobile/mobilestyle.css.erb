@font-face {
	font-family: TradeGothic;
	src: url(<%= font_path('TradeGothicLTStd.otf') %>);
}
@font-face {
	font-family: TradeGothicCn18;
	src: url(<%= font_path('TradeGothicLTStd-Cn18.otf') %>);
}
@font-face {
	font-family: TradeGothicLight;
	src: url(<%= font_path('TradeGothicLTStd-Light.otf') %>);
}

html,
body {
	font-family: TradeGothicCn18, TradeGothic, TradeGothicLight;
	background: #ffffff;
	font-size: 17px;
}
h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
	font-family: TradeGothicCn18;
	line-height: 1.1;
}
h1, .h1 {
  font-size: 2.22em;
}
h2, .h2 {
  font-size: 1.86em;
}
h3, .h3 {
  font-size: 1.51em;
}
h4, .h4 {
  font-size: 1.16em;
}
h5, .h5 {
  font-size: 0.92em;
}
h6, .h6 {
  font-size: 0.81em;
}

.pull-center {
	text-align: center;
	display: block;
	margin-left: auto;
	margin-right: auto;
}

/*Pagination*/
.pagination > li > a,
.pagination > li > span {
	color: #22c488;
}
.pagination > li > a:hover,
.pagination > li > span:hover,
.pagination > li > a:focus,
.pagination > li > span:focus {
	color: #eeeeee;
}
.pagination > .active > a,
.pagination > .active > span,
.pagination > .active > a:hover,
.pagination > .active > span:hover,
.pagination > .active > a:focus,
.pagination > .active > span:focus {
	background-color: #22c488;
	border-color: #22c488;
}
.pagination > .disabled > span,
.pagination > .disabled > span:hover,
.pagination > .disabled > span:focus,
.pagination > .disabled > a,
.pagination > .disabled > a:hover,
.pagination > .disabled > a:focus {
	color: #505050;
}
.pagination > li > a:hover,
.pagination > li > span:hover,
.pagination > li > a:focus,
.pagination > li > span:focus {
	color: #22c488;
}
/*End Pagination*/

/*** alert ***/
.alert {
	position: absolute;
	margin-top: 50px;
	width: 100%;
	z-index: 10;
}

/*Forms*/
.help-block > label.error {
	font-weight: normal;
}

/*Modals*/
.modal {
	top: 50px;
}

/*Menu*/
.navbar-agendapro .navbar-nav > li > a {
	color: #ffffff;
}
.navbar-agendapro .navbar-nav > li > a.menu-green {
	color: #22c488;
}
.navbar-agendapro .navbar-nav > li > a.menu-green:hover,
.navbar-agendapro .navbar-nav > li > a.menu-green:focus,
.navbar-agendapro .navbar-nav > li > a.menu-green:active {
	color: #ffffff;
	background-color: transparent;
}
.navbar-agendapro .navbar-nav > li > a.menu-orange {
	color: #fd9610;
}
.navbar-agendapro .navbar-nav > li > a.menu-orange:hover,
.navbar-agendapro .navbar-nav > li > a.menu-orange:focus,
.navbar-agendapro .navbar-nav > li > a.menu-orange:active {
	color: #ffffff;
	background-color: transparent;
}
.navbar-agendapro .navbar-nav > li.divider {
	margin-top: 2em;
}
@media screen and (max-width: 767px) {
	/* General styles for all menus */
	.navbar-default .navbar-collapse,
	.navbar-default .navbar-form {
		border-color: transparent;
	}
	.navbar-fixed-top .navbar-collapse,
	.navbar-fixed-bottom .navbar-collapse {
		max-height: 100%;
	}
	.cbp-spmenu {
	    background: #3a3a3a;
	}
	.navbar-default .navbar-nav > li > a:hover,
	.navbar-default .navbar-nav > li > a:active,
	.navbar-default .navbar-nav > li > a:focus {
		color: #ffffff;
		background: #505050;
	}

	/* Orientation-dependent styles for the content of the menu */
	.cbp-spmenu-vertical {
	    width: 240px;
	    height: 100%;
	    max-height: 100%;
	}
	.cbp-spmenu-vertical a {
	    border-bottom: none;
	}

	/* Vertical menu that slides from the left or right */
	.cbp-spmenu-right {
	    right: -240px;
	}
	.cbp-spmenu-right.menu-open {
	    right: 0px;
	}

	/* Push classes applied to the body */
	.push-body-toleft {
	    left: -240px;
	}
	.container > .navbar-header,
	.container-fluid > .navbar-header,
	.container > .navbar-collapse,
	.container-fluid > .navbar-collapse {
		margin-right: 0;
	}
	.collapse {
		display: block;
		visibility: visible;
	}
}
