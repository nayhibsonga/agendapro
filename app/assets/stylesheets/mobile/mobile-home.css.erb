/*** navbar-agendapro ***/
body {
	padding-top: 50px;
	color: #505050;
}
.navbar-agendapro {
	background-color: rgba(255,255,255,0);
	border-color: rgba(255,255,255,0);
	-webkit-transition: all 0.5s ease-in-out;
	-moz-transition: all 0.5s ease-in-out;
	-o-transition: all 0.5s ease-in-out;
	transition: all 0.5s ease-in-out;
}
.navbar-agendapro > .container .navbar-brand {
	margin-left: 0px;
	padding: 5px 5px;
}
.navbar-agendapro .navbar-text {
	color: #ffffff;
}
.navbar-agendapro .navbar-toggle {
	border-color: #ffffff;
	color: #ffffff;
	padding: 5px 8px;
}
.navbar-agendapro-white {
	background-color: #ffffff;
	border-color: #e7e7e7;
	-webkit-transition: all 0.5s ease-in-out;
	-moz-transition: all 0.5s ease-in-out;
	-o-transition: all 0.5s ease-in-out;
	transition: all 0.5s ease-in-out;
}
.navbar-agendapro-white .navbar-toggle {
	border-color: #ccc;
	color: #ccc;
}
.btn-orange {
	color: #ffffff;
	background-color: #FD9622;
	border-color: #EE8D0E;
}
.btn-orange:hover,
.btn-orange:focus,
.btn-orange.focus,
.btn-orange:active,
.btn-orange.active {
  color: #ffffff;
  background-color: #EE8D0E;
  border-color: #DF840D;
}
.hidden {
	display: none;
}

/*Index*/
.below-navbar {
	margin-top: 30px;
}
.border-box {
	text-align: center;
	display: inline-block;
	padding: 17px 17px;
	width: 90%;
	border: 1px solid #bbbaba;
	margin-bottom: 10px;
}
.content > h3 {
	margin: 0;
}
.carousel-indicators {
	bottom: -20px;
	left: 40%;
	width: 80%;
}
.carousel-indicators li {
	width: 5px;
	height: 5px;
	margin: 1px;
	border: 1px solid #767676;
	background-color: #767676;
}
.carousel-indicators .active {
	width: 7px;
	height: 7px;
	border-color: #22c488;
}

