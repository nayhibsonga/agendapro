
$(document).ready(function(){

	if($('.economic-sector-btn.active').length)
	{
		var x = $('.economic-sector-btn.active').position().left;
		x = x - $("#economic-sectors-wrapper").width()/2;
		$('#economic-sectors-row').scrollLeft(x);
	}

	$("#inputLocalizationMarker").click(function(){
		$("#inputLocalizationRow").toggle();
	});

	$('.economic-sector-btn').on('click', function(e){
		e.preventDefault();
		new_href = $(this).attr('href') + '&latitude=' + $("#latitude").val() + '&longitude=' + $('#longitude').val() + '&inputLocalization=' + $('#inputLocalization').val();
		window.location.href = new_href;
	});

	$('.show-promo-link').on('click', function(e){
		if($("#latitude").length && $("#longitude").length && $("#inputLocalization").length)
		{
			if($("#latitude").val() != "" && $("#longitude").val() != "" && $("#inputLocalization").val != "")
			{
				e.preventDefault();
				new_href = $(this).attr('href') + '&latitude=' + $("#latitude").val() + '&longitude=' + $('#longitude').val() + '&inputLocalization=' + $('#inputLocalization').val();
				window.location.href = new_href;
			}
		}
	});

});