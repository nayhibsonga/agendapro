
$(document).ready(function(){

	if($('.economic-sector-btn.active').length)
	{
		var x = $('.economic-sector-btn.active').position().left;
		x = x - $("#economic-sectors-wrapper").width()/2;
		$('#economic-sectors-row').scrollLeft(x);
	}

	$("#inputLocalizationMarker").click(function(){
		$("#inputLocalizationRow").toggle();
	});

	datepicker('#datepicker', {
	    format: 'dddd d !de mmmm !de yyyy',
	    min: true,
	    klass: {
	      input: 'datepicker'
	    },
	    onSet: function (context) {
	      $('#openHoursBtn').attr('disabled', false);
	    }
  	});

});