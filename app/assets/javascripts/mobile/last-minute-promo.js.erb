  $("#openPayFormBtn").attr("disabled", false);
  $("#openPayFormBtn").show();

}

function generateDate(time) {

  var date_arr = $('#available_dates_select').val().split("/");

  date = date_arr[2] + "-" + date_arr[1] + "-" + date_arr[0];

  time = time + ':00';

  return date + ' ' + time;
}

