          $("#scheduled_cash_div").hide();
        }
      }
      else
      {
        $("#petty_scheduled_close").val("0");
        if(!petty_cash.scheduled_keep_cash)
        {
          $("#petty_scheduled_keep_cash").val("1");
          $("#petty_scheduled_cash").val(petty_cash.scheduled_cash);
          $("#scheduled_cash_div").show();
        }
