function loadEmails()
{
  $('#client_emails_div').html('<p class="text-center"><i class="fa fa-spinner fa-spin fa-2x"></i></p>');
  var client_id = $('#client_id').val();

  $.ajax({
      url: '/clients/' + client_id + '/emails_content?&from=' + $('#from').val() + '&to=' + $('#to').val(),
      cache: false,
      success: function(html){
        $('#client_emails_div').html(html);
      }
  });
}

function openEmailSummary(email_id)
{
  $.ajax({
    url: '/email_summary',
    method: 'get',
    data: {email_id: email_id},
    error: function(response){

    },
    success: function(response){
      $('#emailSummaryModalBody').empty();
      $('#emailSummaryModalBody').append(response);
      $('#emailSummaryModal').modal('show');
    }
  });
}

