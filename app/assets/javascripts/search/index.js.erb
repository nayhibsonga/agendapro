var myAlert
$(function() {
    myAlert = new Alert();
    var windowheight = $(window).height();
    $("#buscador").height(windowheight);
    $("#buscador2").height(windowheight);

    split_name('#full_name', '#inputName', '#inputLastname');

    $('#carousel').carouFredSel({
        items : 4,
        circular : true,
        infinity : true,
        // responsive : true,
        width : "100%",
        scroll : {
            items           : 1,
            duration        : 500,                         
            pauseOnHover    : true
        }                   
    });

    $( window ).resize(function() {
        var windowheight = $(window).height();
        $("#buscador").height(windowheight);
        $("#buscador2").height(windowheight);
    });
    $('a[href*=#]').click(function(){
        $('html, body').animate({
            scrollTop: $( $.attr(this, 'href').substring(1) ).offset().top - 50
        }, 500);
        return false;
    });
    $("#typed-text").typed({
        strings: ["Corte de Pelo", "Tratamientos Faciales", "SPA", "Maquillaje", "Centros de Estética", "Peluquerías", "Masajes", "Manicure", "Pedicure", "Tratamientos Corporales", "Bronceados", "Medicina Alternativa"],
        loop: true,
        typeSpeed: 0,
        cursorChar: "_",
        backDelay: 2000
    });
    var input = document.getElementById('inputLocalization');
    var options = {
      types: ['geocode'],
      componentRestrictions: {country: 'cl'}
    };
    var geocoder = new google.maps.Geocoder();
    var autocomplete = new google.maps.places.Autocomplete(input, options);
    var infowindow = new google.maps.InfoWindow();
    google.maps.event.addListener(autocomplete, 'place_changed', function() {
        if (autocomplete.getPlace().geometry) {
            $('#latitude').val(autocomplete.getPlace().geometry.location.k);
            $('#longitude').val(autocomplete.getPlace().geometry.location.D);
            $('#search_btn').removeAttr("disabled");
        }
    });
    $('#inputLocalization').on('input', function() {
        $('#search_btn').attr("disabled", "disabled");
    });
    $("#inputLocalization").focusin(function () {
        $(document).keypress(function (e) {
            if (e.which == 13) {
                 selectFirstResult();   
            }
        });
    });
    $("#inputLocalization").focusout(function () {
        if(!$(".pac-container").is(":focus") && !$(".pac-container").is(":visible"))
            selectFirstResult();
    });
     
     function selectFirstResult() {
        infowindow.close();
        $(".pac-container").hide();
        var firstResult = $(".pac-container .pac-item:first").text();
        geocoder.geocode({"address":firstResult }, function(results, status) {
            if (status == google.maps.GeocoderStatus.OK) {
                var lat = results[0].geometry.location.lat(),
                    lng = results[0].geometry.location.lng(),
                    placeName = results[0].address_components[0].long_name,
                    latlng = new google.maps.LatLng(lat, lng);
                $('#latitude').val(lat);
                $('#longitude').val(lng);
                $("#inputLocalization").val(firstResult);
                $('#search_btn').removeAttr("disabled");
            }
        });   
     }
    function geolocate() {
        if (navigator.geolocation) {
            $('#geolocate_btn').html('&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= image_tag "small-loader.gif", :alt => "Loader", :id => "small_loader_header", :class => "small-loader-header" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;');
            var positioned = false;
            navigator.geolocation.getCurrentPosition(
                function(position) {
                    positioned = true;
                    $('#latitude').val(position.coords.latitude);
                    $('#longitude').val(position.coords.longitude);
                    $('#search_btn').removeAttr("disabled");
                    var latlng = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
                    geocoder.geocode({'latLng': latlng}, function(results, status) {
                        if (status == google.maps.GeocoderStatus.OK) {
                          if (results[0]) {
                            $('#inputLocalization').val(results[0].formatted_address);
                          } else {
                            $('#inputLocalization').val(position.coords.latitude+', '+position.coords.longitude);
                          }
                        } else {
                          $('#inputLocalization').val(position.coords.latitude+', '+position.coords.longitude);
                        }
                        $('#geolocate_btn').html('<i class="fa fa-crosshairs"></i> Encuéntrame');
                        return false;
                    });
                },
                function (error) {
                    positioned = true;
                    if (error.code == 1) {
                        myAlert.showAlert(
                            '<h3>Hubo un error en el proceso de localización.</h3>' +
                            '<p>No hay permiso, por favor asegúrate permitir la geolicalización automática en tu explorador.</p>'
                        );
                    }
                    else if (error.code == 2) {
                        myAlert.showAlert(
                            '<h3>Hubo un error en el proceso de localización.</h3>' +
                            '<p>Posición no disponible, por favor inténtalo nuevamente o escribe tu ubicación.</p>'
                        );
                    }
                    else if (error.code == 3) {
                        myAlert.showAlert(
                            '<h3>Hubo un error en el proceso de localización.</h3>' +
                            '<p>La consulta tardó mucho, por favor inténtalo nuevamente o escribe tu ubicación.</p>'
                        );
                    }
                    else {
                        myAlert.showAlert(
                            '<h3>Hubo un error en el proceso de localización.</h3>' +
                            '<p>Error desconocido, por favor inténtalo nuevamente o escribe tu ubicación.</p>'
                        );
                    }
                    $('#geolocate_btn').html('<i class="fa fa-crosshairs"></i> Encuéntrame');
                },
                {timeout: 10000}
            );
            setTimeout(function () {
                if (!positioned) {
                    myAlert.showAlert(
                      '<h3>Hubo un error en el proceso de localización.</h3>' +
                      '<p>No hubo respuesta, por favor asegúrate permitir la geolicalización automática en tu explorador.</p>'
                    );
                    $('#geolocate_btn').html('<i class="fa fa-crosshairs"></i> Encuéntrame');
                }
            }, 15000);
        }
        else {
            myAlert.showAlert(
              '<h3>Hubo un error en el proceso de localización.</h3>' +
              '<p>Este explorador no permite geolocalización automática, por favor escribe tu ubicación.</p>'
            );
        }
    }
    $('#geolocate_btn').click(function() {
        geolocate();
    });
});
