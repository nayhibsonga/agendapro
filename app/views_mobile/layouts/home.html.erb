<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="es"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="es"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="es"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="es"> <!--<![endif]-->
  <head>
    <!-- start: Meta -->
    <meta charset="utf-8">
    <title>AgendaPro</title>
    <meta name="description" content="AgendaPro - Sistema de agendamiento OnLine para empresas y usuarios.">
    <meta name="author" content="AgendaPro">
    <meta name="keyword" content="agendapro, agenda, agenda online, reserva, reserva online">
    <%= csrf_meta_tags %>
    <!-- end: Meta -->

    <!-- start: Mobile Specific -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- end: Mobile Specific -->

    <!-- start: App Banner -->
    <meta name="apple-itunes-app" content="app-id=1030031590">
    <meta name="google-play-app" content="app-id=com.ionicframework.agendapro280846">
    <!-- end: App Banner -->

    <!-- start: CSS -->
    <%= stylesheet_link_tag "//fonts.googleapis.com/css?family=Roboto+Condensed:300", type: "text/css" %>
    <%= stylesheet_link_tag "mobile" %>
    <%= stylesheet_link_tag "mobile/mobile-home" %>
    <%= yield :stylesheets %>
    <!-- end: CSS -->

    <%= render 'layouts/icons' %>
  </head>

  <body>
    <!-- start: Header -->
    <header>
      <nav class="navbar navbar-default navbar-agendapro navbar-agendapro-white navbar-fixed-top" role="navigation">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed toggle-menu menu-right push-body" data-toggle="collapse" data-target="#navbar-menu">
              <i class="fa fa-bars"></i>
            </button>
            <%= link_to root_url(subdomain: false), class: 'navbar-brand' do %>
              <%= image_tag 'logos/logo2.png', :alt => 'AgendaPro', :size => '120x41' %>
            <% end %>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-right collapse navbar-collapse" id="navbar-menu">
            <ul class="nav navbar-nav">
              <li><%= link_to 'Inicio', home_path %></li>
              <li><%= link_to "Características", features_path %></li>
              <li><%= link_to "Planes", view_plans_path %></li>
              <li><%= link_to "Tutoriales", tutorials_path %></li>
              <li><%= link_to "Contacto", contact_path %></li>
              <li class="divider"></li>
              <% if user_signed_in? %>
              <% if current_user.company_id %>
                <li><%= link_to '<i class="fa fa-dashboard"></i> Panel Empresa'.html_safe, dashboard_url(subdomain: false) , class: "menu-green" %></li>
              <% end %>
              <li><%= link_to '<i class="fa fa-calendar"></i> Mi Agenda'.html_safe, my_agenda_path, class: "menu-green" %></li>
              <% if current_user.company_id %>
              <li><%= link_to '<i class="fa fa-desktop fa-fw"></i> Ver Sitio'.html_safe, url_for(:subdomain => current_user.company.web_address, controller: 'companies', action: 'overview', locale: current_user.company.country.locale), class: "menu-green", :target => '_blank' %></li>
              <% end %>
              <li><%= link_to '<i class="fa fa-user"></i> Editar Perfil'.html_safe, edit_user_registration_path, class: "menu-green" %></li>
              <li><%= link_to '<i class="fa fa-power-off"></i> Salir'.html_safe, destroy_user_session_path, method: :delete, class: "menu-orange" %></li>
              <% else %>
              <li><%= link_to '<i class="fa fa-user"></i> Regístrate'.html_safe, new_user_registration_path, class: "menu-green" %></li>
              <li><%= link_to '<i class="fa fa-calendar-o"></i> Iniciar Sesión'.html_safe, new_user_session_path, class: "menu-green" %></li>
              <% end %>
              <!-- <li><%= link_to "Agrega tu Empresa", home_path, class: "menu-orange" %></li> -->
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <!-- end: Header -->

    <!-- start: Alerts -->
    <% if notice %>
      <div class="alert alert-info alert-dismissable fade in">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-warning alert-dismissable fade in">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= alert %>
      </div>
    <% end %>
    <!-- end: Alerts -->

    <!-- start: content -->
    <div id="wrapper">
        <%= yield %>
    </div>
    <!-- end: content -->

    <div class="home-footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <%= image_tag 'logos/logo1.png', :alt => 'AgendaPro', :size => "127x43", class: "" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4 padded-col">
            <div class="row">
              <div class="col-xs-12">
                <p><strong>Información Adicional:</strong></p>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <hr class="short-break">
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <p>
                  <%= link_to "Agrega tu Empresa", home_path %><br>
                  <%= link_to 'Buscador', localized_search_path %><br>
                  <%= link_to "Tutoriales", tutorials_path %><br>
                  <%= link_to "Sobre Nosotros", aboutus_path %><br>
                  <%= link_to "Contacto", contact_path %><br>
                  <%= link_to 'Términos y Condiciones', asset_url('pdf/Term_y_Cond_AgendaPro052016.pdf'), target: :blank %>
                </p>
              </div>
            </div>
          </div>
          <div class="col-sm-4 padded-col">
            <div class="row">
              <div class="col-xs-12">
                <p><strong>Síguenos:</strong></p>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <hr class="short-break">
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <p>
                  <%= link_to image_tag('home/index/facebook.png', size: "39x39"), 'https://www.facebook.com/agendapro' %>
                  <%= link_to image_tag('home/index/twitter.png', size: "39x39"), 'https://twitter.com/agendapro_cl' %>
                  <%= link_to image_tag('home/index/instagram.png', size: "39x39"), 'https://www.instagram.com/agendapro_co' %>
                </p>
              </div>
            </div>
          </div>
          <div class="col-sm-4 padded-col bordered-col">
            <div class="row">
              <div class="col-xs-12">
                <p><strong>Contáctanos:</strong></p>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <hr class="short-break">
              </div>
            </div>
            <div class="row">
              <div class="col-xs-1">
                <%= image_tag 'home/index/telefono.png', :alt => 'AgendaPro', :size => "18x26", style: "margin-top: 10px;" %>
              </div>
              <div class="col-xs-11">
                <p>Ventas: <%= t('phones.sales') %><br />Soporte: <%= t('phones.support') %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-xs-1">
                <%= image_tag 'home/index/mail.png', :alt => 'AgendaPro', :size => "18x14" %>
              </div>
              <div class="col-xs-11">
                <p>contacto@agendapro.cl</p>
              </div>
              <div class="col-xs-1">
                <%= image_tag 'home/index/location.png', :alt => 'AgendaPro', :size => "18x27" %>
              </div>
              <div class="col-xs-11">
                <p>Ana María Carrera 5210, Las Condes - Santiago, Chile</p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-lg-5 copyright-footer">
            <i class="fa fa-copyright"></i> Copyright 2013 | Gunei Investment SpA | Todos los derechos reservados
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <%= image_tag 'home/index/corfo.png', :alt => 'Corfo', :size => "207x72" %>
            <%= image_tag 'home/index/semilla.png', :alt => 'Corfo', :size => "137x72" %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            &nbsp;
          </div>
        </div>
      </div>
    </div>

    <!-- start: JavaScript-->
    <%= javascript_include_tag "mobile" %>
    <%= yield :scripts %>
    <!-- end: JavaScript-->
  </body>
</html>
