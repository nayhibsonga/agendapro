<!-- search -->
<div class="container below-navbar">
    <div class="row">
        <div class="col-xs-12">
            Busca, Encuentra y Reserva en:
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <%= form_tag({controller: "searchs", action: "search"}, method: "GET", class: "form-horizontal", id: "search-form") do %>
                <input type="hidden" id="district" name="district" value="1">
                <input type="hidden" id="latitude" name="latitude" value="-33.412819">
                <input type="hidden" id="longitude" name="longitude" value="-70.591945">
                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="input-group">
                            <%= text_field_tag :inputLocalization, params[:inputLocalization], class: "form-control", placeholder: "Escribe tu dirección...", required: true %>
                            <span class="input-group-btn">
                                <button id="geolocate_btn" class="btn btn-search geolocate_btn" type="button"><i class="fa fa-crosshairs"></i> Encuéntrame</button>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                	<div class="col-xs-12">
                		<div class="input-group">
                        	<%= search_field_tag :inputSearch, params[:inputSearch], class: "form-control", placeholder: "Ejemplo: Corte de Pelo", :required => "true" %>
                        	<span class="input-group-btn">
                        		<button id="search_btn" class="btn btn-search-results" type="submit"><i class="fa fa-search"></i> Buscar</button>
                        	</span>
                		</div>
                	</div>
                </div>
            <% end %>
        </div>
    </div>
</div>
<div class="container">
	<div class="row">
		<% i = 1
		@results.each do |location| %>
		<div class="col-xs-12">
			<div class="box-search">
				<a href="<%= url_for(:host => location.company.web_address + '.' + @domain, :local => location.id, :controller => 'companies', :action => 'overview') %>">
					<% if location.company.logo_url %>
					<%= image_tag location.company.logo_url.to_s, :alt => location.company.name %>
					<% else %>
					<%= image_tag 'logo_vacio.png', :alt => 'AgendaPro' %>
					<% end %>
					<div class="description">
						<h3><%= location.company.name %></h3>
						<div class="number-pin">
							<span><%= i %></span>
						</div>
						<p><%= if !location.outcall then location.address+', '+location.district.name else "A Domicilio" end %>.</p>
					</div>
				</a>
			</div>
		</div>
		<% i += 1
		end %>
        <%= will_paginate @results, renderer: BootstrapPagination::Rails %>
		<% if @results.empty? %>
		<div class="col-xs-12">
			<div class="box-search">
				<a href="#">
					<%= image_tag 'mobile/sad_ap.png', :alt => 'AgendaPro' %>
					<div class="description">
						<h3>Lo sentimos</h3>
						<p class="search-text-green">No encontramos resultados para: <%= params[:inputSearch] %></p>
					</div>
				</a>
			</div>
		</div>
		<% end %>
	</div>
</div>

