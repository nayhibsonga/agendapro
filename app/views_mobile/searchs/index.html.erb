<!-- search -->
<div class="background fill" style="background-image: url(<%= asset_path 'search/fondo'+rand(1..7).to_s+'.png' %>)" id="buscador">
    <div class="fill">
        <div class="container container-search fill" id="buscador2">
            <div class="row vertical-center-row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1 class="search-text">Busca, Encuentra y Reserva tus <span class="search-text-green">Servicios en</span></h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <%= form_tag({controller: "searchs", action: "search"}, method: "GET", class: "form-horizontal", id: "search-form") do %>
                                <input type="hidden" id="district" name="district" value="1">
