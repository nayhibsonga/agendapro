<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2 class="text-center text-uppercase">Bienvenido a tu Agenda</h2>
		</div>
	</div>
</div>
<div class="background-light-grey" style="margin-bottom: 15px;">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<h3 class="text-center">
					<% if @user.first_name.blank? || @user.last_name.blank? %>
						<%= @user.email %>
					<% else %>
						<%= @user.first_name + " " + @user.last_name %>
					<% end %>
				</h3>
			</div>
			<div class="col-xs-12">
				<div class="pull-center">
					<% if !@user.phone.blank? %>
            			<%= image_tag "search/email.png", :size => "20x15" %>&nbsp;Email:&nbsp;<%= @user.email %>&nbsp;&nbsp;&nbsp;
            			<%= image_tag "telefono.png", :size => "15x15" %>&nbsp;Teléfono:&nbsp;<%= @user.phone %>
            		<% else %>
            			<%= image_tag "search/email.png", :size => "20x15" %>&nbsp;Email:&nbsp;<%= @user.email %>
            		<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-12 pull-center">
			<div class="border-box">
                <div id="carousel-what-we-do" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-what-we-do" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-what-we-do" data-slide-to="1"></li>
                        <li data-target="#carousel-what-we-do" data-slide-to="2"></li>
                        <li data-target="#carousel-what-we-do" data-slide-to="3"></li>
                        <li data-target="#carousel-what-we-do" data-slide-to="4"></li>
                        <li data-target="#carousel-what-we-do" data-slide-to="5"></li>
                        <li data-target="#carousel-what-we-do" data-slide-to="6"></li>
                        <li data-target="#carousel-what-we-do" data-slide-to="7"></li>
                        <li data-target="#carousel-what-we-do" data-slide-to="8"></li>
                        <li data-target="#carousel-what-we-do" data-slide-to="9"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <div>
                                <%= image_tag "search/1spa.png", alt: "Spa" %>
                                <p>Spa</p>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <%= image_tag "search/2peluqueria.png", alt: "Peluquerías" %>
                                <p>Peluquerías</p>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <%= image_tag "search/3maquillaje.png", alt: "Maquillaje" %>
                                <p>Maquillaje</p>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <%= image_tag "search/4centrosdeestetica.png", alt: "Clinicas y Centros de Estetica" %>
                                <p>Centros de Estetica</p>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <%= image_tag "search/5masajes.png", alt: "Masajes" %>
                                <p>Masajes</p>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <%= image_tag "search/6manosypies.png", alt: "Manos y Pies" %>
                                <p>Manos y Pies</p>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <%= image_tag "search/7medicinaalternativa.png", alt: "Medicina Alternativa" %>
                                <p>Medicina Alternativa</p>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <%= image_tag "search/8bronceados.png", alt: "Bronceados" %>
                                <p>Bronceados</p>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <%= image_tag "search/9tratamientosfaciales.png", alt: "Tratamientos Faciales" %>
                                <p>Tratamientos Faciales</p>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <%= image_tag "search/10tratamientoscorporales.png", alt: "Tratamientos Corporales" %>
                                <p>Tratamientos Corporales</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
		</div>
	</div>

	<% if @sessionBookings.count > 0 %>

	<div class="row">

        <div class="col-xs-12">
            <div class="panel panel-agendapro">
				<div class="panel-heading">
                	<h3>Reservas por sesiones</h3>
	                <span style="float: right; padding-right: 10px;">
	                    <select id="session-booking-select" class="form-control">
	                        <% @sessionBookings.each do |session_booking| %>
	                            <option value="<%= session_booking.id %>">
	                                <%= session_booking.service.name %> en <%= session_booking.service.company.name %>
	                            </option>
	                        <% end %>
	                    </select>
	                </span>
	            </div>
	            <div class="panel-body">
		            <div id="sessions-summary" style="margin-top: 5px; margin-bottom: 5px;">

		            </div>
		            <div id="sessions-div">

		            </div>
	            </div>
            </div>
        </div>

    </div>

	<% end %>

	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-agendapro">
				<div class="panel-heading">
					<h3 class="panel-title">Reservas Activas</h3>
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>Inicio</th>
									<th>Empresa</th>
									<th>Local</th>
									<th>Servicio</th>
									<th>Staff</th>
									<th>Precio</th>
									<th>Opciones</th>
								</tr>
							</thead>
							<tbody>
								<% @activeBookings.each do |booking| %>
								<tr>
									<td>
					    				<%= l booking.start, format: :short %>
					    			</td>
					    			<td>
					    				<%= Company.find(booking.service_provider.company_id).name %>
					    			</td>
					    			<td>
					    				<%= booking.location.name %>
					    			</td>
					    			<td>
					    				<% if !booking.is_session %>
					                        <%= booking.service.name %>
					                    <% else %>
					                        <%= booking.service.name + " (Sesión)" %>
					                    <% end %>
					    			</td>
					    			<td>
					    				<%= booking.service_provider.public_name %>
					    			</td>
					    			<td>
					    				$<%= number_with_precision(booking.service.price, precision: 0, separator: '', delimiter: '.') %>
					    			</td>
					    			<td>
                    <% if booking.editable %>
					    				<%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, booking_edit_url(:confirmation_code => booking.confirmation_code), :class => 'btn btn-warning btn-xs' %>
                    <% end %>
                    <% if booking.cancelable %>
										<%= link_to '<i class="fa fa-trash-o"></i> Cancelar'.html_safe, booking_cancel_url(:confirmation_code => booking.confirmation_code), :class => 'btn btn-danger btn-xs' %>
                    <% end %>
					    			</td>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-agendapro">
				<div class="panel-heading">
					<h3 class="panel-title">Últimas Reservas</h3>
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>Inicio</th>
									<th>Empresa</th>
									<th>Local</th>
									<th>Servicio</th>
									<th>Staff</th>
									<th>Estado</th>
								</tr>
							</thead>
							<tbody>
								<% @lastBookings.each do |booking| %>
								<tr>
									<td>
					    				<%= l booking.start, format: :short %>
					    			</td>
					    			<td>
					    				<%= Company.find(booking.service_provider.company_id).name %>
					    			</td>
					    			<td>
					    				<%= booking.location.name %>
					    			</td>
					    			<td>
					    				<% if !booking.is_session %>
					                        <%= booking.service.name %>
					                    <% else %>
					                        <%= booking.service.name + " (Sesión)" %>
					                    <% end %>
					    			</td>
					    			<td>
					    				<%= booking.service_provider.public_name %>
					    			</td>
					    			<td>
					    				<%= booking.status.name %>
					    			</td>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "datepicker" %>
	<%= stylesheet_link_tag "mobile/mobile-agenda" %>
<% end %>

<% content_for :scripts do %>
	<%= javascript_include_tag "mobile/agenda" %>
	<%= javascript_include_tag "datepicker" %>
<% end %>