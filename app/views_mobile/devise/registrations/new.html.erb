<div class="row">
	<div class="col-xs-12">
		<div class="single-local">
			<div class="center-load">
				<%= image_tag 'mobile/user.png', :alt => 'Usuario', :id => 'logo-home' %>
				<p>REGISTRATE</p>
			</div>
		</div>
		<div id="reservar" class="visible">
			<%= form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'loginform'} do |f| %>
				<%= f.hidden_field :role_id, :value => Role.where(:name => "Admin").first.id %>
				<div class="form-group">
					<%= f.label :first_name, 'Nombre' %>
					<%= f.text_field :first_name, :autofocus => true, :required => true, :class => 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :last_name, 'Apellido' %>
					<%= f.text_field :last_name, :required => true, :class => 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :phone, 'Teléfono' %>
					<%= f.telephone_field :phone, :required => true, :class => 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :email, 'Email' %>
					<%= f.email_field :email, :required => true, :class => 'form-control', placeholder: 'ejemplo@dominio.com' %>
				</div>
				<div class="form-group">
					<%= f.label :password, 'Contraseña' %>
					<%= f.password_field :password, :required => true, :class => 'form-control', placeholder: 'XXXXXXXX' %>
				</div>
				<div class="form-group">
					<%= f.label :password_confirmation, 'Confirmar Contraseña' %>
					<%= f.password_field :password_confirmation, :required => true, :class => 'form-control', placeholder: 'XXXXXXXX' %>
				</div>
				<div class="form-group">
                    <%= f.submit 'Regístrate', :class => 'btn btn-success btn-lg btn-block' %>
                    <%= link_to "Cancelar", :back, :class => 'btn btn-default btn-lg btn-block' %>
                </div>
			<% end %>
		</div>
	</div>
</div>
