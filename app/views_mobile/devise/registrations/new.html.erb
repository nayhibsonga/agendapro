<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>Regístrate</h3>
      <%= form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'loginform'} do |f| %>
        <%= f.hidden_field :role_id, :value => Role.where(:name => "Administrador General").first.id %>
        <%= f.hidden_field :first_name %>
        <%= f.hidden_field :last_name %>
        <div class="row" style="margin-top: 12px; margin-bottom: 5px;">
          <div class="col-xs-12">
            <span class="login-title">Regístrate con Facebook o Google</span>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-1">
          </div>
          <div class="col-xs-5">
            <%= link_to '<i class="fa fa-facebook"></i> Facebook'.html_safe, social_login_url('facebook'), { :class => "btn btn-block btn-social btn-facebook pull-right" }  %>
          </div>
          <div class="col-xs-5">
            <%= link_to '<i class="fa fa-google"></i> Google'.html_safe, social_login_url('google_oauth2'), { :class => "btn btn-block btn-social btn-google-plus" }  %>
          </div>
          <div class="col-xs-1">
          </div>          
        </div>
        <div class="row" style="margin-top: 12px; margin-bottom: 5px;">
          <div class="col-xs-12">
            <span class="login-title">O crea tu cuenta</span>
          </div>
        </div>
        <div class="form-group">
          <label for="user_full_name">Nombre</label>
          <input type="text" id="user_full_name" name="user[full_name]" class="form-control" placeholder="Nombre completo">
          <span class="help-block"></span>
        </div>
        <div class="form-group">
          <%= f.label :email, 'E-mail' %>
          <%= f.email_field :email, :required => true, :class => 'form-control', placeholder: 'ejemplo@dominio.com' %>
          <span class="help-block"></span>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Contraseña' %>
          <%= f.password_field :password, :required => true, :class => 'form-control', placeholder: 'XXXXXXXX' %>
          <span class="help-block"></span>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirmar Contraseña' %>
          <%= f.password_field :password_confirmation, :required => true, :class => 'form-control', placeholder: 'XXXXXXXX' %>
          <span class="help-block"></span>
        </div>
        <div class="form-group">
            <%= f.submit 'Regístrate', :class => 'btn btn-orange btn-lg btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :scripts do %>
<%= javascript_include_tag 'validations/home/new-user' %>
<%= javascript_include_tag 'split-name' %>
<script type="text/javascript">
  $(function () {
    split_name('#user_full_name', '#user_first_name', '#user_last_name', '#new_user');
  });
</script>
<% end %>
