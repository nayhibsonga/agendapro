<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3>Inicia Sesión</h3>
            <%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { class: 'loginform' } do |f| %>
                <div class="row" style="margin-top: 12px; margin-bottom: 5px;">
                  <div class="col-xs-12">
                    <span class="login-title">Ingresa con Facebook o Google</span>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-2">
                  </div>
                  <div class="col-xs-8">
                    <%= link_to '<i class="fa fa-facebook"></i> Facebook'.html_safe, social_login_url('facebook'), { :class => "btn btn-block btn-social btn-facebook" }  %>
                    <%= link_to '<i class="fa fa-google"></i> Google'.html_safe, social_login_url('google_oauth2'), { :class => "btn btn-block btn-social btn-google-plus" }  %>
                  </div>
                  <div class="col-xs-2">
                  </div>
                </div>
                <div class="row" style="margin-top: 12px; margin-bottom: 5px;">
                  <div class="col-xs-12">
                    <span class="login-title">O con tu cuenta AgendaPro</span>
                  </div>
                </div>
                <div class="form-group">
                    <%= f.label :email, 'E-mail' %>
                    <%= f.email_field :email, :autofocus => true, :required => true, :class => 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :password, 'Contraseña' %>
                    <%= f.password_field :password, :required => true, :class => 'form-control' %>
                    <div class="checkbox">
                        <label>
                            <%= f.check_box :remember_me %> Recordarme
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.submit 'Ingresar', :class => 'btn btn-orange btn-lg btn-block' %>
                </div>
            <% end %>
        </div>
        <div class="col-xs-12">
            <div class="well">
                <p> ¿No recuerdas tu contraseña?
                    <%= link_to "Recuperar Contraseña", new_password_path(resource_name) %><br />
                </p>
                <p> ¿No quieres seguir con nosotros?
                    <%= link_to "Cancelar mi cuenta", registration_path(resource_name), :data => { :confirm => "¿Estás seguro que deseas cancelar tu cuenta?" }, :method => :delete %>
                </p>
            </div>
        </div>
    </div>
</div>
