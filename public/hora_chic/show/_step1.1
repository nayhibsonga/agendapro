<div id="step1" class="no-select">
  <div class="row">

    <div id="calendar" class="col-md-4">
      <div id="datepicker"></div>

      <div class="legend">
        <span class="date-square"></span>
        {{ tc.lang.step1.legend.deals }}
      </div>
    </div>

    <div id="hours" class="col-md-5">
      <div class="row">
        <div class="col-xs-6" ng-repeat="section in sc.sections" style="height: 345px; overflow: auto;">
          <div class="col-xs-12 text-center">
            {{ tc.lang.step1.section[section] }}
          </div>

          <div class="col-xs-12 hour-container" ng-repeat="date in sc.availableHours[section] track by $index" style="margin-bottom: 5px;">
            <div class="available">
              {{ date.start_block }} - {{ date.end_block }}
            </div>
          </div>

          <div class="col-xs-12 text-center empty-hours" ng-show="sc.availableHours[section].length === 0">
            <span>{{ tc.lang.step1.legend.section.empty_hours }}</span>
          </div>
        </div>

      </div>
    </div>

    <div id="detail-summary" class="col-md-3">
      <div class="detail-container">
        <div>
          {{ tc.lang.step1.detail.appointment }}
        </div>

        <div class="reservation-detail" ng-repeat="service in sc.servicesList">
          <div>
            {{ service.name }}
          </div>

          <div>
            <span>® XX:XX - XX-XX</span>
          </div>

          <div>
            ∑
            <span class="discount">$28.000</span>
            <span class="price"> {{ service.price | currency | clp }} </span>
            <span>(50% dcto)</span>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>
